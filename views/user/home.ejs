            <!-- Title -->
            <div class="section-title  text-center">
                <h2 class="about-title">About Us</h2>
            </div>
            <% for(var i=0; i < home_our_story.length; i++) { %>
                <!-- About Layout -->
                <div class="about-grid rounded-4 overflow-hidden">

                    <!-- Image -->
                    <div class="about-img">
                        <img src="upload/home/<%= home_our_story[i].image %>" alt="Event Management">
                    </div>

                    <!-- Content -->
                    <div class="about-content">
                        <h3>
                            <%= home_our_story[i].title %>
                        </h3>

                        <p>
                            <%= home_our_story[i].description %>
