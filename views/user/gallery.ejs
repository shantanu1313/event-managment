            <!-- Filter Buttons -->
            <div class="container">
                <div class="filter-buttons">
                    <div class="d-flex flex-wrap justify-content-center">

                        <!-- All button -->
                        <button class="filter-btn active" data-filter="all">
                            All Events
                        </button>

                        <!-- Dynamic category buttons -->
                        <% if(categories && categories.length> 0){ %>
                            <% categories.forEach(function(cat){ %>
                                <button class="filter-btn" data-filter="<%= cat %>">
                                    <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                                </button>
                                <% }) %>
                                    <% } %>

                    </div>
                </div>
            </div>



            <!-- Gallery Grid -->
            <section class="gallery-grid">
                <div class="container">
                    <div class="row" id="gallery-container">

                        <% if(gallery && gallery.length> 0){ %>
                            <% gallery.forEach(function(item, index){ %>

                                <div class="col-lg-4 col-md-6 mb-4 gallery-item 
                        <%= index >= 12 ? 'extra-item' : '' %>" data-category="<%= item.category.toLowerCase() %>">

                                    <a href="#" class="gallery-link"
                                        data-image="/upload/gallery/<%= item.gallary_img %>"
                                        data-title="<%= item.title %>">

                                        <img src="/upload/gallery/<%= item.gallary_img %>" class="gallery-image"
                                            alt="<%= item.title %>">

                                        <div class="gallery-overlay">
                                            <span class="gallery-category">
                                                <%= item.category %>
                                            </span>

                                            <h4 class="gallery-title">
                                                <%= item.title %>
                                            </h4>

                                            <span class="gallery-date">
                                                <%= new Date(item.event_date) .toLocaleDateString('en-GB') %>
                                            </span>
                                        </div>
                                    </a>
                                </div>

                                <% }) %>
                                    <% } else { %>
                                        <div class="col-12 text-center">
                                            <p>No gallery images found</p>
                                        </div>
                                        <% } %>

                    </div>


                    <div class="text-center mt-5">
                        <button id="hidemore" class="btn btn-primary btn-lg px-5">
                            Show Less
                        </button>
                    </div>


                    <div class="text-center mt-5">
                        <button id="loadMore" class="btn btn-primary btn-lg px-5">
                            Load More Events
                        </button>
                    </div>
                </div>
            </section>

            <!-- Contact CTA -->
            <section class="contact-cta">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <h2 class="mb-3">Like What You See?</h2>
                            <p class="lead text-muted mb-4">
                                Let's create memorable moments for your next event.
                                Contact us to discuss your vision and requirements.
                            </p>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="/contact" class="btn btn-primary btn-lg">
                                    <i class="fas fa-phone me-2"></i>Contact Us
                                </a>
                                <!-- <button class="btn btn-outline-primary btn-lg" href="/login">
                                    <i class="fas fa-calendar-check me-2"></i>Book Event
                                </button> -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Bootstrap Carousel Lightbox Modal -->
            <div class="modal fade lightbox-modal" id="galleryLightbox" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-xl">
                    <div class="modal-content">
                        <div class="modal-header border-0">
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="modal-body p-0">
                            <!-- Carousel will be inserted here by JavaScript -->
                            <div id="lightboxCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <!-- Items will be added dynamically -->
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#lightboxCarousel"
                                    data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#lightboxCarousel"
                                    data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                        <div class="modal-footer border-0 justify-content-center">
                            <div class="lightbox-caption text-white text-center">
                                <!-- Caption will be inserted here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <script>
                // Lightbox functionality
                document.addEventListener('DOMContentLoaded', function () {
                    const galleryLinks = document.querySelectorAll('.gallery-link');
                    const lightboxModal = new bootstrap.Modal(document.getElementById('galleryLightbox'));
                    const carouselInner = document.querySelector('#lightboxCarousel .carousel-inner');
                    const lightboxCaption = document.querySelector('.lightbox-caption');

                    // Initialize carousel ONCE
                    const bsCarousel = new bootstrap.Carousel(document.getElementById('lightboxCarousel'), {
                        interval: false, // Disable auto sliding
                        ride: false
                    });

                    // Prev/Next buttons
                    const prevBtn = document.querySelector('#lightboxCarousel .carousel-control-prev');
                    const nextBtn = document.querySelector('#lightboxCarousel .carousel-control-next');
                    prevBtn.addEventListener('click', () => bsCarousel.prev());
                    nextBtn.addEventListener('click', () => bsCarousel.next());

                    // Gallery click
                    galleryLinks.forEach((link, index) => {
                        link.addEventListener('click', function (e) {
                            e.preventDefault();

                            // Clear carousel items
                            carouselInner.innerHTML = '';

                            // Add all images
                            galleryLinks.forEach((item, idx) => {
                                const itemImage = item.getAttribute('data-image');
                                const itemTitle = item.getAttribute('data-title');
                                const itemOverlay = item.querySelector('.gallery-overlay');
                                const itemDate = itemOverlay ? itemOverlay.querySelector('.gallery-date').textContent : '';
                                const itemCategory = item.closest('.gallery-item').getAttribute('data-category');

                                const carouselItem = document.createElement('div');
                                carouselItem.className = `carousel-item ${idx === index ? 'active' : ''}`;
                                carouselItem.innerHTML = `<img src="${itemImage}" class="d-block w-100" alt="${itemTitle}">`;
                                carouselInner.appendChild(carouselItem);

                                if (idx === index) {
                                    lightboxCaption.innerHTML = `
                        <h5 class="mb-1">${itemTitle}</h5>
                        <p class="mb-0">
                            <span class="badge bg-primary me-2">${itemCategory}</span>
                            <small class="text-white-50">${itemDate}</small>
                        </p>
                    `;
                                }
                            });

                            // Update caption on slide change
                            document.getElementById('lightboxCarousel').addEventListener('slide.bs.carousel', function (event) {
                                const activeIndex = event.to;
                                const activeLink = galleryLinks[activeIndex];
                                const activeTitle = activeLink.getAttribute('data-title');
                                const activeOverlay = activeLink.querySelector('.gallery-overlay');
                                const activeDate = activeOverlay ? activeOverlay.querySelector('.gallery-date').textContent : '';
                                const activeCategory = activeLink.closest('.gallery-item').getAttribute('data-category');

                                lightboxCaption.innerHTML = `
                    <h5 class="mb-1">${activeTitle}</h5>
                    <p class="mb-0">
                        <span class="badge bg-primary me-2">${activeCategory}</span>
                        <small class="text-white-50">${activeDate}</small>
                    </p>
                `;
                            });

                            // Show lightbox
                            lightboxModal.show();
                        });
                    });
                });


                // Gallery filtering
                const filterBtns = document.querySelectorAll('.filter-btn');
                const galleryItems = document.querySelectorAll('.gallery-item');
                const loadMoreBtn = document.getElementById('loadMore');
                const hideMoreBtn = document.getElementById('hidemore');

                // Hide extra items initially
                galleryItems.forEach(item => {
                    if (item.classList.contains('extra-item')) {
                        item.style.display = 'none';
                    }
                });

                // Filter functionality
                filterBtns.forEach(btn => {
                    btn.addEventListener('click', function () {
                        filterBtns.forEach(b => b.classList.remove('active'));
                        this.classList.add('active');

                        const filter = this.dataset.filter;

                        galleryItems.forEach(item => {
                            const isExtra = item.classList.contains('extra-item');
                            const matchesFilter = filter === 'all' || item.dataset.category === filter;

                            if (matchesFilter && (!isExtra || item.style.display === 'block')) {
                                item.style.display = 'block';
                            } else {
                                item.style.display = 'none';
                            }
                        });
                    });
                });

                // Load more functionality
                if (loadMoreBtn) {
                    loadMoreBtn.addEventListener('click', function () {
                        document.querySelectorAll('.extra-item').forEach(item => {
                            item.style.display = 'block';
                        });
                        this.style.display = 'none';
                        if (hideMoreBtn) hideMoreBtn.style.display = 'block';
                    });
                }

                // Show less functionality
                if (hideMoreBtn) {
                    hideMoreBtn.addEventListener('click', function () {
                        document.querySelectorAll('.extra-item').forEach(item => {
                            item.style.display = 'none';
                        });
                        this.style.display = 'none';
                        if (loadMoreBtn) loadMoreBtn.style.display = 'block';
                    });
                    hideMoreBtn.style.display = 'none';
                }

                // Event type buttons in booking modal
                document.querySelectorAll('.event-type-btn').forEach(btn => {
                    btn.addEventListener('click', function () {
                        document.querySelectorAll('.event-type-btn').forEach(b => b.classList.remove('active'));
                        this.classList.add('active');
                    });
                });

            </script>

