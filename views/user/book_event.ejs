<%- include('./navbar.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="css/book_event.css">

<section class="demo_section">
  <div class="booking-card">

    <div class="booking-title">
      <h2><i class="fas fa-calendar-check me-2"></i>Book Your Event</h2>
      <p>Fill the details & submit your booking</p>
    </div>

   <form id="bookEventForm" action="/book_event" method="POST">
  <div class="row g-3">

    <!-- NAME -->
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Full Name</label>
      <input type="text" id="name" name="name" class="form-control" required>
    </div>

    <!-- MOBILE -->
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Mobile Number</label>
      <input type="tel" id="mobile" name="mobile" class="form-control" required>
    </div>

    <!-- EVENT TYPE -->
    <% if (event) { %>
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Event Type</label>
      <input type="text" class="form-control" value="<%= event %>" readonly>
      <input type="hidden" name="event_type" value="<%= event %>">
    </div>
    <% } else { %>
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Event Type</label>
      <select id="eventType" name="event_type" class="form-select" required>
        <option value="">Select Event</option>
        <option>Wedding</option>
        <option>Birthday Party</option>
        <option>Corporate Event</option>
        <option>Engagement</option>
        <option>Reception</option>
      </select>
    </div>
    <% } %>

    <!-- START DATE -->
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Start Date</label>
      <input type="date" id="startDate" name="start_date" class="form-control" required>
    </div>

    <!-- END DATE -->
    <div class="col-lg-4 col-md-6">
      <label class="form-label">End Date</label>
      <input type="date" id="endDate" name="end_date" class="form-control" required>
    </div>

    <!-- PACKAGE NAME (PACKAGE FLOW ONLY) -->
    <% if (package_name) { %>
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Selected Package</label>
      <input type="text" class="form-control" value="<%= package_name %>" readonly>
      <input type="hidden" name="package_name" value="<%= package_name %>">
    </div>
    <% } %>

    <!-- BUDGET : NON-PACKAGE -->
    <% if (!price) { %>
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Budget (â‚¹)</label>
      <select id="budget" name="budget" class="form-select" required>
        <option value="">Select Budget</option>
        <option>â‚¹50,000 â€“ â‚¹1,00,000</option>
        <option>â‚¹1,00,000 â€“ â‚¹3,00,000</option>
        <option>Above â‚¹3,00,000</option>
      </select>
    </div>
    <% } %>

    <!-- STARTING FROM : PACKAGE FLOW -->
    <% if (price) { %>
    <div class="col-lg-4 col-md-6">
      <label class="form-label">Budget</label>
      <input type="text"
             class="form-control"
             value="Starting from â‚¹<%= price %>"
             readonly>
      <input type="hidden" name="budget" value="Starting from â‚¹<%= price %>">
    </div>
    <% } %>

    <!-- FEATURES (PACKAGE ONLY â€“ FULL WIDTH) -->
    <% if (features) { 
         const featureList = JSON.parse(features);
    %>
    <div class="col-12">
      <label class="form-label">Package Includes</label>
      <ul class="list-group mt-2">
        <% featureList.forEach(f => { %>
          <li class="list-group-item">
            <i class="fas fa-check text-success me-2"></i><%= f %>
          </li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <!-- MESSAGE -->
    <div class="col-12">
      <label class="form-label">Additional Message</label>
      <textarea id="message" name="message" class="form-control" rows="3"></textarea>
    </div>

    <!-- SUBMIT -->
    <div class="col-12 text-end mt-4">
      <button type="button" id="submitBtn" class="btn btn-book px-4">
        <i class="fas fa-paper-plane me-2"></i>Submit Booking
      </button>
    </div>

  </div>
</form>


  </div>
</section>

<script>
    // ðŸ”¹ Set WhatsApp number from server-side data
    const WHATSAPP_NUMBER = "<%= (mobile && mobile.length > 0) ? mobile[0].mobile_no : '' %>";
    const EVENT_TYPE_DEFAULT = "<%- event || '' %>";

    document.getElementById("submitBtn").addEventListener("click", function () {

      // ðŸ”¹ Basic fields
      const name = document.getElementById("name").value.trim();
      const mobileInput = document.getElementById("mobile").value.trim();
      const startDate = document.getElementById("startDate").value;
      const endDate = document.getElementById("endDate").value;
      const message = document.getElementById("message").value.trim();

      // ðŸ”¹ Optional fields (may or may not exist)
      const eventTypeEl = document.getElementById("eventType");
      const budgetEl = document.getElementById("budget");

      const eventType = eventTypeEl ? eventTypeEl.value : EVENT_TYPE_DEFAULT;
      const budget = budgetEl ? budgetEl.value : "Not Selected";

      // ðŸ”´ Validations
      if (!name || !mobileInput) {
        Swal.fire("Missing Info", "Please fill name & mobile number", "warning");
        return;
      }

      if (!startDate || !endDate) {
        Swal.fire("Missing Date", "Please select start & end date", "warning");
        return;
      }

      if (new Date(endDate) < new Date(startDate)) {
        Swal.fire("Invalid Date", "End date must be after start date", "error");
        return;
      }

      // ðŸ”¹ WhatsApp message
      const whatsappText = `ðŸ“Œ *New Event Booking* ðŸŽ‰

ðŸ‘¤ Name: ${name}
ðŸ“ž Mobile: ${mobileInput}
ðŸŽŠ Event: ${eventType}

ðŸ“… Dates: ${startDate} to ${endDate}
ðŸ’° Budget: ${budget}

ðŸ“ Message:
${message || "No message"}`;

      // ðŸ”¹ Confirmation popup
      Swal.fire({
        title: "How do you want to submit?",
        icon: "question",
        showCancelButton: true,
        confirmButtonText: "Send WhatsApp + Submit",
        cancelButtonText: "Only Submit",
        confirmButtonColor: "#25D366"
      }).then((result) => {

        // âœ… Submit form always
        document.getElementById("bookEventForm").submit();

        // âœ… WhatsApp only if confirmed
        if (result.isConfirmed && WHATSAPP_NUMBER) {
          window.open(
            "https://wa.me/91" + WHATSAPP_NUMBER + "?text=" + encodeURIComponent(whatsappText),
            "_blank"
          );
        }
      });
    });
  </script>

