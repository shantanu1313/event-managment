<%- include('navbar.ejs') %>

    <link rel="stylesheet" href="css/services.css">

    <!-- Hero Section -->
    <% if (service_slider && service_slider.length> 0) { %>

        <section class="services-banner" style="
    margin-top: 80px;
    min-height: 60vh;
    background: linear-gradient(rgba(0,0,0,.70), rgba(0,0,0,.70)),
            url('/upload/service/<%= service_slider[0].image %>');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-align: center;
">
            <div class="container">
                <h1>
                    <%= service_slider[0].title %>
                </h1>
                <p>
                    <%= service_slider[0].description %>
                </p>
            </div>
        </section>

        <% } %>

            <!-- Main Services -->
            <section id="services" class="py-5">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold section-title">What We Offer</h2>
                        <p class="text-muted mt-4">Comprehensive event solutions tailored to your needs</p>
                    </div>

                    <div class="row g-4">
                        <!-- Wedding Planning -->
                        <% for(var i=0; i < service.length;i++) { %>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="service-card">
                                    <div class="card-header gradient-1 position-relative">
                                        <div class="service-icon">
                                            <i class="<%= service[i].logo %>"></i>
                                        </div>
                                        <h5 class="text-white mb-1 fw-bold" style="font-size: 1rem;">
                                            <%= service[i].title %>
                                        </h5>
                                        <p class="text-white-50 mb-0" style="font-size: 0.75rem;">
                                            <%= service[i].short_quote %>
                                        </p>
                                    </div>
                                    <div class="card-body">
                                        <ul class="feature-list">
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature1 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature2 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature3 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature4 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature5 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature6 %>
                                            </li>
                                        </ul>
                                        <div class="price-tag">
                                            <div class="price-amount">â‚¹<%= service[i].price %>
                                            </div>
                                            <div class="price-period">Starting price</div>
                                        </div>
                                        <a href="#" class="btn gradient-1 text-light w-100 mt-3 rounded-pill btn-sm">
                                            <%= service[i].book_button %>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                    </div>
                </div>
            </section>

            <!-- Add-on Services -->
            <section class="py-5 bg-light">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold section-title">Add-on Services</h2>
                        <p class="text-muted mt-4">Enhance your event with these additional services</p>
                    </div>

                    <div class="row g-3">
                        <% for(var i=0; i < other_service.length;i++) { %>
                            <div class="col-lg-2 col-md-3 col-4">
                                <div class="addon-card">
                                    <div class="addon-icon bg-primary bg-opacity-10">
                                        <i class="bi <%= other_service[i].icon %> text-primary"></i>
                                    </div>
                                    <h6>
                                        <%= other_service[i].title %>
                                    </h6>
                                    <p>
                                        <%= other_service[i].short_quote %>
                                    </p>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </section>

            <!-- Process Section -->
            <section class="process-section py-5">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <span class="badge gradient-1 text-white px-3 py-2 rounded-pill mb-3">Our Process</span>
                        <h2 class="fw-bold text-dark">How We Work</h2>
                        <p class="text-dark mt-3">Simple steps to your perfect event</p>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-3 col-6">
                            <div class="process-card h-100">
                                <div class="process-number">1</div>
                                <h5>Consultation</h5>
                                <p>Share your vision and requirements with our experts</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="process-card h-100">
                                <div class="process-number">2</div>
                                <h5>Planning</h5>
                                <p>We create a detailed plan and budget proposal</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="process-card h-100">
                                <div class="process-number">3</div>
                                <h5>Coordination</h5>
                                <p>We handle all vendors, logistics and details</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="process-card h-100">
                                <div class="process-number">4</div>
                                <h5>Execution</h5>
                                <p>Flawless event delivery with on-site management</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Smooth Scroll -->
            <script>
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    });
                });

                // Navbar scroll effect
                window.addEventListener('scroll', function () {
                    const navbar = document.querySelector('.navbar');
                    if (window.scrollY > 50) {
                        navbar.classList.add('shadow-lg');
                    } else {
                        navbar.classList.remove('shadow-lg');
                    }
                });
            </script>

            <%- include('footer.ejs') %>