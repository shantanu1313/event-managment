        <section class="services-banner" style="
    margin-top: 80px;
    min-height: 60vh;
    background: linear-gradient(rgba(0,0,0,.70), rgba(0,0,0,.70)),
            url('/upload/service/<%= service_slider[0].image %>');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-align: center;
">
            <div class="container">
                <h1>
                    <%= service_slider[0].title %>
                </h1>
                <p>
                    <%= service_slider[0].description %>
                </p>
            </div>
        </section>

        <% } %>

            <!-- Main Services -->
            <section id="services" class="py-5">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold section-title">What We Offer</h2>
                        <p class="text-muted mt-4">Comprehensive event solutions tailored to your needs</p>
                    </div>

                    <div class="row g-4">
                        <!-- Wedding Planning -->
                        <% for(var i=0; i < service.length;i++) { %>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="service-card">
                                    <div class="card-header gradient-1 position-relative">
                                        <div class="service-icon">
                                            <i class="<%= service[i].logo %>"></i>
                                        </div>
                                        <h5 class="text-white mb-1 fw-bold" style="font-size: 1rem;">
                                            <%= service[i].title %>
                                        </h5>
                                        <p class="text-white-50 mb-0" style="font-size: 0.75rem;">
                                            <%= service[i].short_quote %>
                                        </p>
                                    </div>
                                    <div class="card-body">
                                        <ul class="feature-list">
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature1 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature2 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature3 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature4 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature5 %>
                                            </li>
                                            <li><i class="bi bi-check-circle-fill"></i>
                                                <%= service[i].feature6 %>
                                            </li>
                                        </ul>
                                        <div class="price-tag">
                                            <div class="price-amount">₹<%= service[i].price %>
                                            </div>
                                            <div class="price-period">Starting price</div>
                                        </div>
                               <!-- <a href="/book_event?event=<%= service.title %>&price=<%= service.price %>"
   class="btn btn-primary w-100 mt-3 rounded-pill">
   Book Event
</a> -->

<a href="javascript:void(0)"
   class="btn btn-primary w-100 mt-3 rounded-pill"
   onclick="openServiceModal(
     '<%= service[i].title %>',
     '<%= service[i].price %>',
     '<%= service[i].short_quote %>',
     '<%= service[i].feature1 %>',
     '<%= service[i].feature2 %>',
     '<%= service[i].feature3 %>'
   )">
   Book Event
</a>




                                    </div>
                                </div>
                            </div>
                            <% } %>

                    </div>
                </div>
            </section>

            <!-- Add-on Services -->
            <section class="py-5 bg-light">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold section-title">Add-on Services</h2>
                        <p class="text-muted mt-4">Enhance your event with these additional services</p>
                    </div>

                    <div class="row g-3">
                        <% for(var i=0; i < other_service.length;i++) { %>
                            <div class="col-lg-2 col-md-3 col-4">
                                <div class="addon-card">
                                    <div class="addon-icon bg-primary bg-opacity-10">
                                        <i class="bi <%= other_service[i].icon %> text-primary"></i>
                                    </div>
                                    <h6>
                                        <%= other_service[i].title %>
                                    </h6>
                                    <p>
                                        <%= other_service[i].short_quote %>
                                    </p>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </section>

            <!-- Process Section -->
            <section class="process-section py-5">
                <div class="container py-5">
                    <div class="text-center mb-5">
                        <span class="badge gradient-1 text-white px-3 py-2 rounded-pill mb-3">Our Process</span>
                        <h2 class="fw-bold text-dark">How We Work</h2>
                        <p class="text-dark mt-3">Simple steps to your perfect event</p>
                    </div>

                    <div class="row g-4">
                        <% for(var i=0; i<how_work.length; i++ ) { %>
                            <div class="col-md-3 col-6">
                                <div class="process-card h-100">
                                    <div class="process-number">
                                        <%= i+1 %>
                                    </div>
                                    <h5>
                                        <%= how_work[i].title %>
                                    </h5>
                                    <p>
                                        <%= how_work[i].quote %>
                                    </p>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </section>

            <!-- Smooth Scroll -->
            <script>
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    });
                });

                // Navbar scroll effect
                window.addEventListener('scroll', function () {
                    const navbar = document.querySelector('.navbar');
                    if (window.scrollY > 50) {
                        navbar.classList.add('shadow-lg');
                    } else {
                        navbar.classList.remove('shadow-lg');
                    }
                });
               

function openServiceModal(title, price, quote, f1, f2, f3) {

    document.getElementById("modalTitle").innerText = title;
    document.getElementById("modalPrice").innerText = price;
    document.getElementById("modalQuote").innerText = quote;

    document.getElementById("f1").innerText = f1;
    document.getElementById("f2").innerText = f2;
    document.getElementById("f3").innerText = f3;

    // auto-fill data next page ला पाठवतो
    document.getElementById("proceedBtn").href =
        "/book_event?event=" + encodeURIComponent(title) +
        "&price=" + encodeURIComponent(price);

    const modal = new bootstrap.Modal(
        document.getElementById("serviceModal")
    );
    modal.show();
}




            </script>

        <!-- Service Modal -->
<div class="modal fade" id="serviceModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">

  <p id="modalQuote" class="text-muted"></p>

  <ul class="list-unstyled mt-3">
    <li>✔ <span id="f1"></span></li>
    <li>✔ <span id="f2"></span></li>
    <li>✔ <span id="f3"></span></li>
  </ul>

  <h6 class="mt-3">Starting Price</h6>
  <h4 class="text-success">₹<span id="modalPrice"></span></h4>

</div>


      <div class="modal-footer">
        <a id="proceedBtn"
           class="btn btn-primary rounded-pill w-100">
           Continue Booking
        </a>
      </div>

    </div>
  </div>
</div>

