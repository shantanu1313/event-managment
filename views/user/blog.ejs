<%- include('navbar.ejs') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <link rel="stylesheet" href="css/blog.css">

  <% if (blog_slider && blog_slider.length> 0) { %>

    <section class="blog-banner" style="
    margin-top:80px;
    min-height:60vh;
    background:
    linear-gradient(rgba(0,0,0,.70), rgba(0,0,0,.70)),
    url('/upload/blog/<%= blog_slider[0].blog_image %>');
    background-size:cover;
    background-position:center;
    display:flex;
    align-items:center;
    justify-content:center;
    color:#fff;
    text-align:center;
">
      <div>
        <h1>
          <%= blog_slider[0].blog_title %>
        </h1>
        <p class="lead">
          <%= blog_slider[0].blog_description %>
        </p>
      </div>
    </section>

    <% } else { %>

      <section class="blog-banner" style="
    margin-top:80px;
    min-height:60vh;
    background:#000;
    display:flex;
    align-items:center;
    justify-content:center;
    color:#fff;
    text-align:center;
">
        <div>
          <h1>No Blog Found</h1>
          <p class="lead">Please add blog from admin panel</p>
        </div>
      </section>

      <% } %>


        <!-- ===== BLOG CARDS ===== -->
        <section class="blog-section">
          <div class="container">
            <div class="row g-4 justify-content-center">

              <% for (var i=0; i < blog.length; i++) { %>

                <!-- BLOG CARD -->
                <div class="col-sm-6 col-lg-4">
                  <div class="card blog-card h-100">

                    <div class="blog-img">
                      <img src="/upload/blog/<%= blog[i].blog_image %>" alt="Blog Image">
                    </div>

                    <div class="card-body">
                      <div class="blog-meta mb-2">
                        <i class="far fa-calendar"></i>
                        <%= new Date(blog[i].blog_date).toLocaleDateString('en-US', { month: 'long' , day: 'numeric' ,
                          year: 'numeric' }) %>
                      </div>

                      <h5>
                        <%= blog[i].blog_title %>
                      </h5>

                      <p class="text-muted">
                        <%= blog[i].blog_para %>
                      </p>

                      <a href="#" class="btn blog-btn btn-sm text-white readMoreBtn"
                        data-title="<%= blog[i].blog_title %>" data-content="<%= blog[i].blog_message %>">
                        Read More
                      </a>
                    </div>

                  </div>
                </div>

                <% } %>

            </div>
          </div>
        </section>


        <!-- ===== READ MORE MODAL ===== -->
        <div class="modal fade" id="readMoreModal" tabindex="-1">
          <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body" id="modalContent"></div>
            </div>
          </div>
        </div>

        <!-- ===== SIDEBAR ===== -->
        

        <!-- ===== MODAL & SIDEBAR CSS ===== -->
        <style>
          .modal-content {
            border-radius: 20px;
            border: none;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.25);
          }

          .modal-header {
            background: linear-gradient(135deg, #341f97, #6f42c1);
            color: #fff;
          }

          .modal-header .btn-close {
            filter: invert(1);
          }

          .modal-body {
            padding: 30px;
            font-size: 16px;
            line-height: 1.8;
            background: #f9f9ff;
          }

          .sidebar-box {
            background: linear-gradient(145deg, #fff, #f3f4ff);
            padding: 35px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(52, 31, 151, 0.12);
            transition: 0.4s;
          }

          .sidebar-box:hover {
            transform: translateY(-8px);
          }
        </style>

        <!-- ===== JS ===== -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
          document.querySelectorAll('.readMoreBtn').forEach(btn => {
            btn.addEventListener('click', function (e) {
              e.preventDefault();
              modalTitle.innerText = this.dataset.title;
              modalContent.innerText = this.dataset.content;
              new bootstrap.Modal(readMoreModal).show();
            });
          });
        </script>

        <%- include('footer.ejs') %>