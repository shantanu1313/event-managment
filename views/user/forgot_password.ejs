<title>Forgot Password - Siddhivinayak Event Management</title>

<style>
/* ‚úÖ Isolate styles to forgot password page (navbar safe) */
.demo * {
  box-sizing: border-box;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.demo{
  margin-top: 70px;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url('images/slider3.jpeg');
  background-size: cover;
  background-position: center;
  padding: 20px;
}

/* Container */
.forgot-container {
  background: rgba(255, 255, 255, 0.95);
  padding: 3rem;
  border-radius: 20px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  width: 100%;
  max-width: 450px;
}

.forgot-header {
  text-align: center;
  margin-bottom: 2rem;
}

.input-group {
  margin-bottom: 1.5rem;
}

.input-group label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.input-group input {
  width: 100%;
  padding: 0.9rem;
  border-radius: 10px;
  border: 2px solid #e0e0e0;
}

.forgot-btn {
  width: 100%;
  padding: 1rem;
  background: linear-gradient(135deg, #5232DB, #7B52E8);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
}

.links {
  text-align: center;
  margin-top: 1.5rem;
}

.footer-text {
  text-align: center;
  margin-top: 1rem;
  font-size: 0.9rem;
  color: #777;
}

input,
textarea {
  user-select: none;
  -webkit-user-select: none; /* Chrome, Safari */
  -moz-user-select: none;    /* Firefox */
  -ms-user-select: none;     /* Edge */
}

</style>

<div class="demo">
  <div class="forgot-container">

    <div class="forgot-header">
      <h2>Forgot Password</h2>
      <p>Enter your registered email to receive OTP</p>
    </div>

    <form id="forgotForm" action="/forgot_password" method="post">

      <!-- Email -->
      <div class="input-group" id="emailGroup">
        <label>Registered Email</label>
        <input class="user-select-none" type="email" id="email" name="email" required>
      </div>

      <!-- OTP -->
      <div class="input-group" id="otpGroup" style="display:none;">
        <label>Enter OTP</label>
        <input class="user-select-none" type="text" id="otp" name="otp" maxlength="6">
      </div>

      <!-- Button -->
      <button type="button" class="forgot-btn" onclick="sendOtp()">
        Send OTP
      </button>

      <div class="links">
        <a href="/login">Back to Login</a>
      </div>

      <div class="footer-text">
        ¬© 2024 Siddhivinayak Event Management
      </div>

    </form>

  </div>
</div>

<script>

let otpSent = false;

function sendOtp() {

  const email = document.getElementById("email").value;
  const otp   = document.getElementById("otp").value;
  const btn   = document.querySelector(".forgot-btn");

  /* STEP 1 ‚Üí SEND OTP */
  if (!otpSent) {

    if (!email) {
      alert("Please enter email");
      return;
    }

    btn.innerText = "Sending OTP...";
    btn.disabled = true;

    $.ajax({
      url: "/send_otp_mail",
      type: "POST",
      data: { email },

      success: function () {
        alert("OTP sent to your email üìß");

        document.getElementById("emailGroup").style.display = "none";
        document.getElementById("otpGroup").style.display = "block";

        btn.innerText = "Verify OTP";
        btn.disabled = false;
        otpSent = true;
      },

      error: function () {
        alert("Failed to send OTP");
        btn.innerText = "Send OTP";
        btn.disabled = false;
      }
    });

  }
  /* STEP 2 ‚Üí VERIFY OTP */
  else {

    if (!otp) {
      alert("Please enter OTP");
      return;
    }

    // ‚úÖ DIRECT SUBMIT (NO CONFLICT)
    document.getElementById("forgotForm").submit();
  }
}
const params = new URLSearchParams(window.location.search);

/* ‚ùå INVALID OTP */
if (params.get("error") === "invalid_otp") {

  alert("Invalid OTP. Please enter correct OTP.");

  window.history.replaceState({}, document.title, window.location.pathname);

  document.getElementById("emailGroup").style.display = "none";
  document.getElementById("otpGroup").style.display = "block";

  document.querySelector(".forgot-btn").innerText = "Verify OTP";
  document.querySelector(".forgot-btn").disabled = false;

  otpSent = true;
}
/* ‚ùå OTP NOT SENT / EXPIRED */
if (params.get("error") === "otp_not_sent") {
  alert("OTP was not sent or expired.");
  window.history.replaceState({}, document.title, window.location.pathname);
}

/* ‚ùå SERVER ERROR */
if (params.get("error") === "server") {
  alert("Something went wrong. Please try again.");
  window.history.replaceState({}, document.title, window.location.pathname);
}
</script>

