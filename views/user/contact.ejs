<link rel="stylesheet" href="/css/contact.css">

<!-- PAGE HEADER -->
<section class="contact-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We’d love to hear from you. Get in touch with us.</p>
    </div>
</section>

<!-- ===== CONTACT SECTION ===== -->
<section class="contact-section">
    <div class="container">
        <div class="row g-4 align-items-stretch">

            <!-- INFO -->
            <div class="col-lg-4">
                <div class="contact-info h-100">
                    <h4>Get In Touch</h4>

                    <!-- ADDRESS -->
                    <div class="info-box">
                        <div class="info-icon"><i class="fas fa-location-dot"></i></div>
                        <div>
                            <h6>Address</h6>
                            <p>
                                Siddhivinayak Event Management,<br>
                                BalikAshram Road, Near A2Z IT HUB,<br>
                                Ahilyanagar, Maharashtra – 414601
                            </p>
                        </div>
                    </div>

                    <!-- PHONE -->
                    <div class="info-box">
                        <div class="info-icon"><i class="fas fa-phone"></i></div>
                        <div>
                            <h6>Phone</h6>
                            <p>
                                <a href="tel:+919192043756" class="contact-link">
                                    +91 9192043756
                                </a>
                            </p>
                        </div>
                    </div>

                    <!-- EMAIL -->
                    <div class="info-box">
                        <div class="info-icon"><i class="fas fa-envelope"></i></div>
                        <div>
                            <h6>Email</h6>
                            <p>
                                <a 
                                  href="mailto:siddhivinayak@gmail.com?subject=Event%20Inquiry"
                                  class="contact-link"
                                >
                                    siddhivinayak@gmail.com
                                </a>
                            </p>
                        </div>
                    </div>

                    <!-- WHATSAPP -->
                    <div class="info-box">
                        <div class="info-icon"><i class="fab fa-whatsapp"></i></div>
                        <div>
                            <h6>WhatsApp</h6>
                            <p>
                                <a href="https://wa.me/918261978030?text=Hello!%20I%20want%20to%20inquire%20about%20your%20services" target="_blank" class="contact-link">Chat on WhatsApp</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FORM -->
            <div class="col-lg-8">
                <div class="contact-form h-100">
                    <h3 class="mb-4">Send Us a Message</h3>

                    <form>
                        <div class="row">
                            <!-- FULL NAME -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fas fa-user"></i>Full Name *</label>
                                <input type="text" class="form-control" placeholder="Enter your full name" required>
                            </div>

                            <!-- EMAIL -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fas fa-envelope"></i>Email *</label>
                                <input type="email" class="form-control" placeholder="Enter your email" required>
                            </div>
                        </div>

                        <div class="row">
                            <!-- PHONE -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fas fa-phone"></i>Phone *</label>
                                <input type="tel" class="form-control" placeholder="10-digit phone number" 
                                       pattern="[0-9]{10}" title="Enter exactly 10 digits" required>
                            </div>

                            <!-- EVENT TYPE -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fas fa-calendar-alt"></i>Event Type *</label>
                                <select class="form-select" required>
                                    <option value="">Select Event</option>
                                    <option>Wedding</option>
                                    <option>Corporate Event</option>
                                    <option>Birthday Party</option>
                                    <option>Conference</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- SUBJECT -->
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-tag"></i>Subject *</label>
                            <input type="text" class="form-control" placeholder="Enter subject" required>
                        </div>

                        <!-- MESSAGE -->
                        <div class="mb-4">
                            <label class="form-label"><i class="fas fa-comment"></i>Message *</label>
                            <textarea class="form-control" rows="5" placeholder="Type your message" required></textarea>
                        </div>

                        <button class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>
                            Send Message
                        </button>
                    </form>
                </div>
            </div>

        </div>

        <!-- MAP -->
        <div class="map-section">
            <iframe
                src="https://www.google.com/maps?q=A2Z%20IT%20Hub%20Ahilyanagar&output=embed"
                width="100%" height="450" style="border:0;" loading="lazy">
            </iframe>
        </div>

    </div>
</section>

