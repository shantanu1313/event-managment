<%- include('navbar.ejs') %>

<link rel="stylesheet" href="/css/contact.css">

<!-- PAGE HEADER -->
<section class="contact-header"
    <% if(typeof header !== 'undefined' && header && header.image){ %>
        style="background-image: url('/upload/contact/<%= header.image %>');"
    <% } %>
>
    <div class="container text-center">
        <% if(header){ %>
            <h1><%= header.title %></h1>
            <p><%= header.subtitle %></p>
        <% } %>
    </div>
</section>

<section class="contact-section">
    <div class="container">

        <!-- CONTACT INFO + FORM -->
        <div class="row g-5 align-items-start">

            <!-- CONTACT INFO (ONLY ONCE) -->
            <div class="col-lg-4" style="margin-top: 100px;">
                <% if (contacts.length > 0) { 
                    const contact = contacts[0];
                %>

                <div class="contact-info mb-4">
                    <h4>Get In Touch</h4>

                    <div class="info-box">
                        <div class="info-icon"><i class="fas fa-location-dot"></i></div>
                        <div>
                            <h6>Address</h6>
                            <p><%= contact.address %></p>
                        </div>
                    </div>

                    <div class="info-box">
                        <div class="info-icon"><i class="fas fa-phone"></i></div>
                        <div>
                            <h6>Phone</h6>
                            <p>
                                <% if(contact.phone){ %>
                                    <a href="tel:<%= contact.phone %>" class="contact-link">
                                        <%= contact.phone %>
                                    </a>
                                <% } else { %>
                                    <span class="text-muted">Not available</span>
                                <% } %>
                            </p>
                        </div>
                    </div>

                    <div class="info-box">
                        <div class="info-icon"><i class="fas fa-envelope"></i></div>
                        <div>
                            <h6>Email</h6>
                            <p>
                                <% if(contact.email){ %>
                                    <a href="mailto:<%= contact.email %>" class="contact-link">
                                        <%= contact.email %>
                                    </a>
                                <% } else { %>
                                    <span class="text-muted">Not available</span>
                                <% } %>
                            </p>
                        </div>
                    </div>

                    <div class="info-box">
                        <div class="info-icon"><i class="fab fa-whatsapp"></i></div>
                        <div>
                            <h6>WhatsApp</h6>
                            <p>
                                <% if(contact.whatsapp){ %>
                                    <a href="https://wa.me/<%= contact.whatsapp.replace(/\D/g,'') %>"
                                       target="_blank"
                                       class="contact-link">
                                        Chat on WhatsApp
                                    </a>
                                <% } else { %>
                                    <span class="text-muted">Not available</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>

                <% } else { %>
                    <p class="text-muted">No contact info available.</p>
                <% } %>
            </div>

         <!-- CONTACT FORM -->
<div class="col-lg-8 mt-5">
    <div class="contact-form p-4 shadow-sm bg-white rounded">
        <h3 class="mb-4">Send Us a Message</h3>

        <form action="/save_contact_form" method="POST">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Full Name *</label>
                    <input type="text" name="full_name" class="form-control" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Email *</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Phone *</label>
                    <input type="number" name="phone" class="form-control" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Event Type *</label>
                    <select name="event_type" class="form-select" required>
                        <option value="">Select Event</option>
                        <option>Wedding</option>
                        <option>Corporate Event</option>
                        <option>Birthday Party</option>
                        <option>Conference</option>
                        <option>Other</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Subject *</label>
                <input type="text" name="subject" class="form-control" required>
            </div>

            <div class="mb-4">
                <label class="form-label">Message *</label>
                <textarea name="message" rows="4" class="form-control" required></textarea>
            </div>

            <button class="btn btn-primary px-4">Send Message</button>

           <% if(success){ %>
    <div class="alert alert-success mt-3">
        Message sent successfully!
    </div>
<% } %>


        </form>
    </div>
</div>



<!-- MAP -->
<% if(contacts.length > 0 && contacts[0].map_url){ %>
    <div class="map-section">
        <iframe
            src="<%= contacts[0].map_url %>"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
<% } else { %>
    <p class="text-center text-muted mt-4">Map not available</p>
<% } %>




    </div>
</section>

<%- include('footer.ejs') %>
