<%- include('navbar.ejs') %>

<link rel="stylesheet" href="/css/contact.css">

<!-- PAGE HEADER -->
<section class="contact-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We’d love to hear from you. Get in touch with us.</p>
    </div>
</section>

<!-- CONTACT SECTION -->
<section class="contact-section">
    <div class="container">
        <div class="row g-4 align-items-stretch">

            <!-- GET IN TOUCH -->
            <div class="col-lg-4">
                <div class="contact-info h-100">
                    <h4>Get In Touch</h4>

                    <div class="info-box">
                        <div class="info-icon">
                            <i class="fas fa-location-dot"></i>
                        </div>
                        <div>
                            <h6>Address</h6>
                            <p>Siddhivinayak Event Management, BalikAshram Road, Near A2Z IT HUB, Ahilyanagar, Maharashtra – 414601</p>
                        </div>
                    </div>

                    <div class="info-box">
                        <div class="info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div>
                            <h6>Phone</h6>
                            <p>+91 98765 43210</p>
                        </div>
                    </div>

                    <div class="info-box">
                        <div class="info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <h6>Email</h6>
                            <p>siddhivinayak@gmail.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CONTACT FORM -->
            <div class="col-lg-8">
                <div class="contact-form h-100">
                    <h3 class="mb-4">Send Us a Message</h3>

                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Full Name *</label>
                                <input type="text" class="form-control" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" class="form-control">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Event Type *</label>
                                <select class="form-select" required>
                                    <option value="">Select Event</option>
                                    <option>Wedding</option>
                                    <option>Corporate Event</option>
                                    <option>Birthday Party</option>
                                    <option>Conference</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Subject *</label>
                            <input type="text" class="form-control" required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Message *</label>
                            <textarea class="form-control" rows="5" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Send Message
                        </button>
                    </form>
                </div>
            </div>

        </div>

        <!-- MAP -->
        <div class="map-section">
            <iframe
                src="https://www.google.com/maps?q=A2Z%20IT%20Hub%20Ahilyanagar&output=embed"
                width="100%"
                height="450"
                style="border:0;"
                allowfullscreen
                loading="lazy">
            </iframe>
        </div>
    </div>
</section>

<%- include('footer.ejs') %>
