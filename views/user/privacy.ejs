<%- include('navbar.ejs') %>

<link rel="stylesheet" href="css/privacy.css">


<div class="container-fluid mt-5">

    <% if (policies && policies.length > 0) { %>
        <% policies.forEach(function(p){ %>

            <div class="privacy-card mb-5 shadow rounded overflow-hidden">

                <% if (p.privacy_image) { %>
                <div class="privacy-img-wrapper">

                    <img src="/upload/policy/<%= p.privacy_image %>" class="privacy-img">

                    <!-- FULL OVERLAY CONTENT -->
                    <div class="privacy-overlay-full">
                        <div class="overlay-content">

                            <% if (p.privacy_icon) { %>
                                <i class="<%= p.privacy_icon %> overlay-icon"></i>
                            <% } %>

                            <h2 class="overlay-title"><%= p.privacy_title %></h2>

                            <p class="overlay-text">
                                <%= p.privacy_content %>
                            </p>

                        </div>
                    </div>

                </div>
                <% } %>

            </div>

        <% }) %>
    <% } else { %>

        <p class="text-center text-muted">Privacy policy not available.</p>

    <% } %>

</div>



<div class="container">
    <div class="privacy-content">

        <% 
        // ðŸ”¹ Title â†’ Icon Mapping
        const iconMap = {
            "Information We Collect": "fa-database",
            "How We Use Information": "fa-cogs",
            "Data Security": "fa-lock",
            "Cookies Policy": "fa-cookie-bite",
            "Third Party Sharing": "fa-users",
            "User Rights": "fa-user-shield",
            "Contact Us": "fa-envelope"
        };
        %>

        <% if (reports && reports.length > 0) { %>

            <% reports.forEach(report => { %>
                <div class="section mb-4">

                    <!-- ðŸ”¹ Section Title with Dynamic Icon (white color) -->
                    <h3>
                        <i class="fas <%= iconMap[report.section_title] || 'fa-shield-alt' %> me-2 text-white"></i>
                        <%= report.section_no %>. <%= report.section_title %>
                    </h3>

                    <!-- ðŸ”¹ Section Content -->
                    <p>
                        <% 
                            const lines = report.section_content.split(/\r?\n/);
                            lines.forEach(line => { 
                        %>
                            <span style="display:inline-block; width:100%;">
                                <i class="fas fa-check-circle me-2 text-secondary"></i>
                                <%= line %>
                            </span><br>
                        <% }) %>
                    </p>

                </div>
            <% }) %>

        <% } else { %>
            <p>No privacy policy content available.</p>
        <% } %>

               <!-- Contact -->
<div class="section">
    <h3><i class="fas fa-envelope-open-text"></i> 8. Contact Us</h3>
    <p>For privacy-related questions or concerns:</p>

    <% if (contact) { %>
    <div class="contact-info">

        <div class="contact-item">
            <i class="fas fa-phone-alt"></i>
            <div>
                <strong>Phone</strong><br>
                <a href="tel:<%= contact.contact_phone %>">
                    <%= contact.contact_phone %>
                </a>
                <small class="text-muted d-block">
                    Available: <%= contact.contact_availability %>
                </small>
            </div>
        </div>

        <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <div>
                <strong>Email</strong><br>
                <a href="mailto:<%= contact.contact_email %>">
                    <%= contact.contact_email %>
                </a>
                <small class="text-muted d-block">
                    Response: <%= contact.contact_response_time %>
                </small>
            </div>
        </div>

        <div class="contact-item">
            <i class="fas fa-map-marker-alt"></i>
            <div>
                <strong>Address</strong><br>
                <span><%= contact.contact_address %></span>
            </div>
        </div>

    </div>
    <% } %>
</div>
    </div>
</div>


  

    </div>

    
</div>





</div>

