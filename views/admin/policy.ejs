<%- include('navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

        
<div class="container mt-4">

    <!-- PAGE TITLE -->
    <div class="mb-4">
        <h3><i class="fas fa-shield-alt"></i> Privacy Policy Management</h3>
    </div>

    <!-- ADD POLICY FORM -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Add Privacy Policy
        </div>
        <div class="card-body">

            <form action="/admin/save_policy" method="post" enctype="multipart/form-data">

                <!-- TITLE -->
                <div class="mb-3">
                    <label class="form-label">Policy Title</label>
                    <input type="text" name="privacy_title" class="form-control" required>
                </div>

                <!-- ICON -->
                <div class="mb-3">
                    <label class="form-label">Icon Class</label>
                    <input type="text" name="privacy_icon" class="form-control" placeholder="bi bi-shield-lock">
                </div>

                <!-- IMAGE -->
                <div class="mb-3">
                    <label class="form-label">Policy Image</label>
                    <input type="file" name="privacy_image" class="form-control">
                </div>

                <!-- CONTENT -->
                <div class="mb-3">
                    <label class="form-label">Policy Content</label>
                    <textarea name="privacy_content" rows="5" class="form-control" required></textarea>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Save Policy
                </button>

            </form>

        </div>
    </div>

    <!-- POLICY LIST -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            Privacy Policy List
        </div>
        <div class="card-body p-0">

            <% if (policies && policies.length > 0) { %>

                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Icon</th>
                            <th>Content</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% policies.forEach(function(p){ %>
                            <tr>
                                <td><%= p.privacy_id %></td>

                                <td>
                                    <% if (p.privacy_image) { %>
                                        <img src="/upload/policy/<%= p.privacy_image %>" width="80">
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>

                                <td><%= p.privacy_title %></td>

                                <td>
                                    <% if (p.privacy_icon) { %>
                                        <i class="<%= p.privacy_icon %>"></i>
                                        <small class="text-muted d-block"><%= p.privacy_icon %></small>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>

                                <td style="max-width:300px;">
                                    <%= p.privacy_content.substring(0, 100) %>...
                                </td>
                                <td>
                                    <a href="/admin/edit_policy/<%= p.privacy_id %>" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        <% }) %>

                    </tbody>
                </table>

            <% } else { %>
                <p class="text-center text-muted p-3 mb-0">
                    No Privacy Policy Found
                </p>
            <% } %>

        </div>
    </div>

</div>

<%- include('footer.ejs') %>