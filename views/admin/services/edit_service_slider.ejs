<%- include('../navbar.ejs') %>

<main class="main-content">

    <!-- ðŸ”¹ TOP DASHBOARD BAR -->
    <header class="top-navbar">
        <div class="page-title">
            <h1>Dashboard Overview</h1>
            <p>Welcome back! Here's what's happening with your events today.</p>
        </div>

        <div class="navbar-right">
            <div class="search-wrapper">
                <i class="fas fa-search search-icon"></i>
                <input type="text" placeholder="Search events, clients, payments...">
            </div>

            <div class="navbar-icons">
                <div class="nav-icon">
                    <i class="far fa-bell"></i>
                    <span class="notification-badge">5</span>
                </div>
                <div class="nav-icon">
                    <i class="far fa-envelope"></i>
                    <span class="notification-badge">3</span>
                </div>
                <div class="nav-icon">
                    <i class="fas fa-cog"></i>
                </div>
            </div>
        </div>
    </header>

    <div class="dashboard-content">

        <!-- ðŸ”¹ PAGE CSS -->
        <style>
            body {
                font-family: 'Poppins', sans-serif;
                background-color: #F4F6F9;
                color: #212529;
            }

            .page-header {
                background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
                color: #fff;
                padding: 22px 26px;
                border-radius: 16px;
                margin-bottom: 35px;
                display: flex;
                align-items: center;
                gap: 18px;
                box-shadow: 0 8px 22px rgba(11, 94, 215, 0.3);
            }

            .page-header i {
                font-size: 32px;
            }

            .service-card {
                background: #FFFFFF;
                border-radius: 16px;
                border: 1px solid #DEE2E6;
                box-shadow: 0 10px 26px rgba(0, 0, 0, 0.08);
            }

            .card-header {
                background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
                color: #fff;
                padding: 16px;
                font-weight: 600;
            }

            .form-label {
                font-weight: 600;
            }

            .input-group-text {
                background: #E9F2FF;
                color: #0B5ED7;
            }

            .btn-submit {
                padding: 12px 38px;
                border-radius: 12px;
                font-weight: 600;
                background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
                color: #fff;
                border: none;
            }

            .old-image {
                text-align: center;
                margin-bottom: 20px;
            }

            .old-image img {
                width: 140px;
                border-radius: 12px;
                border: 2px solid #0B5ED7;
            }
        </style>

        <div class="container mt-4">

            <!-- ðŸ”· PAGE HEADER -->
            <div class="page-header">
                <i class="fas fa-pen-to-square"></i>
                <div>
                    <h3>Edit Service Slider</h3>
                    <p>Admin Panel â†’ Services â†’ Edit Slider</p>
                </div>
            </div>

            <!-- ðŸ”· EDIT FORM -->
            <div class="row justify-content-center">
                <div class="col-md-7">
                    <div class="service-card">
                        <div class="card-header text-center">
                            <i class="fas fa-edit me-2"></i> Update Service Slider
                        </div>

                        <div class="card-body p-4">

                            <% if (data && data.length > 0) { %>
                                <form 
                                    action="/admin/services/update_service_slider/<%= data[0].slider_id %>" 
                                    method="post" 
                                    enctype="multipart/form-data"
                                >

                                    <input type="hidden" name="old_image" value="<%= data[0].image %>">

                                    <!-- OLD IMAGE -->
                                    <div class="old-image">
                                        <label class="form-label">Current Image</label><br>
                                        <img src="/upload/service/<%= data[0].image %>" alt="Slider Image">
                                    </div>

                                    <!-- TITLE -->
                                    <div class="mb-3">
                                        <label class="form-label">Title</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-heading"></i>
                                            </span>
                                            <input 
                                                type="text" 
                                                name="title" 
                                                class="form-control" 
                                                value="<%= data[0].title %>" 
                                                required
                                            >
                                        </div>
                                    </div>

                                    <!-- DESCRIPTION -->
                                    <div class="mb-3">
                                        <label class="form-label">Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-align-left"></i>
                                            </span>
                                            <textarea 
                                                name="description" 
                                                class="form-control" 
                                                rows="3" 
                                                required
                                            ><%= data[0].description %></textarea>
                                        </div>
                                    </div>

                                    <!-- NEW IMAGE -->
                                    <div class="mb-4">
                                        <label class="form-label">Upload New Image (optional)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-image"></i>
                                            </span>
                                            <input 
                                                type="file" 
                                                name="image" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-submit">
                                            <i class="fas fa-save me-1"></i> Update Slider
                                        </button>
                                    </div>

                                </form>
                            <% } else { %>
                                <p class="text-center text-danger">
                                    No slider data found.
                                </p>
                            <% } %>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


<%- include('../footer.ejs') %>