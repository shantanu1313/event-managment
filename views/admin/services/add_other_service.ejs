<%- include('../navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

            <div class="container-fluid">

        <!-- ðŸ”· OTHER SERVICES HEADER -->
        <div class="d-flex align-items-center justify-content-between mb-4" style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
               color: white;
               padding: 10px 16px;
               border-radius: 12px;
               box-shadow: 0 4px 12px rgba(11,94,215,0.2);">

            <div class="d-flex align-items-center gap-2">
                <i class="fas fa-tags" style="font-size:18px;"></i>
                <div>
                    <h6 class="mb-0 fw-semibold">Other Services</h6>
                    <small style="opacity:0.85;font-size:11px;">
                        Admin Panel â†’ Services â†’ Other Services
                    </small>
                </div>
            </div>

            <a href="#addServiceForm" class="btn btn-sm btn-light fw-semibold">
                + Add Service
            </a>
        </div>

        <!-- ðŸ”· OTHER SERVICES TABLE -->
        <div class="table-responsive mb-5">
            <table class="table table-hover table-bordered align-middle"
                style="background:#F8FAFF;border-radius:14px;overflow:hidden;min-width:700px;">

                <thead style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB); color:white;">
                    <tr class="text-center">
                        <th>#</th>
                        <th>Icon</th>
                        <th>Title</th>
                        <th>Short Quote</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% if(data.length===0) { %>
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No services added yet
                            </td>
                        </tr>
                        <% } %>

                            <% for(var i=0; i < data.length; i++) { %>
                                <tr class="text-center bg-white">

                                    <!-- Index -->
                                    <td class="fw-bold text-primary">
                                        <%= i + 1 %>
                                    </td>

                                    <!-- Icon -->
                                    <td class="text-center align-middle">
                                        <div class="d-inline-flex align-items-center justify-content-center" style="
                                            width:40px;
                                            height:40px;
                                            background:linear-gradient(135deg,#E7F1FF,#F1FCFF);
                                            border-radius:10px;
                                            box-shadow:0 4px 10px rgba(11,94,215,0.15);
                                        ">
                                            <i class="<%= data[i].icon %>" style="font-size:20px;color:#0B5ED7;"></i>
                                        </div>
                                    </td>



                                    <!-- Title -->
                                    <td class="text-start fw-semibold text-dark">
                                        <%= data[i].title %>
                                    </td>

                                    <!-- Quote -->
                                    <td class="text-start text-muted">
                                        <%= data[i].short_quote %>
                                    </td>

                                    <!-- Actions -->
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">

                                            <!-- Edit -->
                                            <a href="/admin/services/edit_other_service/<%= data[i].other_service_id %>"
                                                class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1 rounded-pill px-3">
                                                <i class="bi bi-pencil-square fs-6"></i>
                                                Edit
                                            </a>

                                            <!-- Delete -->
                                            <a href="/admin/services/delete_other_service/<%= data[i].other_service_id %>"
                                                class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1 rounded-pill px-3"
                                                onclick="return confirm('Delete this service?')">
                                                <i class="bi bi-trash fs-6"></i>
                                                Delete
                                            </a>

                                        </div>
                                    </td>


                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>

        <!-- ðŸ”· ADD OTHER SERVICE HEADER -->
        <div id="addServiceForm" class="mb-3" style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
               color: white;
               padding: 10px 16px;
               border-radius: 12px;
               box-shadow: 0 4px 12px rgba(11,94,215,0.2);
               display:flex;align-items:center;gap:10px;">
            <i class="fas fa-plus-circle"></i>
            <div>
                <h6 class="mb-0">Add Other Service</h6>
                <small style="font-size:11px;opacity:0.85;">
                    Admin Panel â†’ Services â†’ Add Other Service
                </small>
            </div>
        </div>

        <!-- ðŸ”· ADD SERVICE FORM -->
        <div class="card shadow p-4 mb-5" style="border-radius:16px;background:#F8FAFF;">

            <form action="/admin/services/add_other_service" method="POST">

                <!-- Icon -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-icons me-2"></i>Select Icon
                    </label>
                    <select name="icon" class="form-select" required>
                        <option value="">Select Service</option>
                        <option value="bi bi-cup-hot">Catering</option>
                        <option value="bi bi-music-note-beamed">Music</option>
                        <option value="bi bi-camera">Photography</option>
                        <option value="bi bi-truck">Transport</option>
                        <option value="bi bi-palette">Decor</option>
                        <option value="bi bi-flower1">Florals</option>
                        <option value="bi bi-lightning-charge">Lighting</option>
                        <option value="bi bi-glass">Bar / Drinks</option>
                        <option value="bi bi-balloon">Party Supplies</option>
                        <option value="bi bi-people">Staff / Crew</option>
                        <option value="bi bi-geo-alt">Venue / Location</option>
                        <option value="bi bi-film">Videography</option>
                        <option value="bi bi-gift">Gifts / Favors</option>
                        <option value="bi bi-book">Planning / Coordination</option>
                        <option value="bi bi-mic">MC / Announcements</option>
                    </select>
                </div>

                <!-- Title -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-tag me-2"></i>Service Name
                    </label>
                    <input type="text" name="title" class="form-control" placeholder="Enter service name" required>
                </div>

                <!-- Quote -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-quote-left me-2"></i>Short Quote
                    </label>
                    <input type="text" name="short_quote" class="form-control" placeholder="Enter short description"
                        required>
                </div>

                <!-- Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="fas fa-plus me-2"></i>Add Service
                    </button>
                </div>

            </form>
        </div>

    </div>

<%- include('../footer.ejs') %>