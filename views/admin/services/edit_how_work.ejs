<%- include('../navbar.ejs') %>

            <div class="container mt-5">

        <!-- üî∑ PAGE HEADER -->
        <div class="page-header mb-4" style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
               color: white;
               padding: 12px 18px;
               border-radius: 12px;
               box-shadow: 0 4px 12px rgba(11,94,215,0.25);
               display: flex;
               align-items: center;
               gap: 12px;">

            <div class="d-flex align-items-center justify-content-center"
                style="width:36px; height:36px; border-radius:8px; background:rgba(255,255,255,0.2); font-size:16px;">
                ‚öôÔ∏è
            </div>

            <div>
                <h5 class="mb-1 fw-semibold">Edit How We Work</h5>
                <small style="opacity:0.85;">Admin Panel ‚Üí Services ‚Üí How We Work</small>
            </div>
        </div>

        <!-- üî∑ FORM CARD -->
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card border-0 shadow" style="border-radius:16px; background:#F8FAFF;">
                    <div class="card-body p-4">
                        <form action="/admin/services/update_how_work/<%= data[0].how_work_id %>" method="post">

                            <!-- Title -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-type me-2 text-primary"></i> Update Title
                                </label>
                                <input type="text" name="title" class="form-control" value="<%= data[0].title %>"
                                    placeholder="Enter title" required>
                            </div>

                            <!-- Quote -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-chat-quote me-2 text-primary"></i> Update Quote
                                </label>
                                <input type="text" name="quote" class="form-control" value="<%= data[0].quote %>"
                                    placeholder="Enter short quote" required>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex gap-3 justify-content-center">
                                <button type="submit" class="btn btn-primary px-4 rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i> Update
                                </button>
                                <a href="/admin/services/how_work" class="btn btn-outline-secondary px-4 rounded-pill">
                                    Cancel
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

