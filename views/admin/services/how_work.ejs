<%- include('../navbar.ejs') %>

            <div class="container mt-4">

        <!-- üî∑ PAGE HEADER -->
        <div class="page-header mb-3" style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB);
        color: white;
        padding: 5px 12px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(11,94,215,0.22);
        display: flex;
        align-items: center;
        gap: 10px;">

            <div class="d-flex align-items-center justify-content-center" style="width:36px;height:36px;border-radius:9px;
            background:rgba(255,255,255,0.2); font-size:16px;">
                ‚öôÔ∏è
            </div>

            <div>
                <h5 class="mb-1 fw-semibold">How We Work Form & List</h5>
                <small style="opacity:0.85; font-size:12px;">
                    Admin Panel ‚Üí Services ‚Üí How We Work
                </small>
            </div>
        </div>

        <!-- üî∑ FORM CARD -->
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card border-0 shadow" style="border-radius:16px;background:#F8FAFF;">

                    <div class="card-body p-4">
                        <form action="/admin/services/how_work_save" method="post">

                            <!-- Title -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold mb-1">
                                    <i class="bi bi-type me-2 text-primary"></i> Title
                                </label>
                                <input type="text" name="title" id="title" class="form-control"
                                    placeholder="Enter title" required>
                            </div>

                            <!-- Quote -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold mb-1">
                                    <i class="bi bi-chat-quote me-2 text-primary"></i> Quote
                                </label>
                                <input type="text" name="quote" id="quote" class="form-control"
                                    placeholder="Enter short quote" required>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary px-4 rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i> Save
                                </button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="table-responsive my-5">
        <table class="table table-hover table-bordered align-middle mb-0"
            style="background:#F8FAFF;border-radius:12px;overflow:hidden;min-width:500px;">

            <!-- TABLE NAME -->
            <caption class="fw-semibold text-primary text-center px-3 py-2" style="caption-side: top; font-size:16px;">
                How We Work List
            </caption>

            <!-- TABLE HEADER -->
            <thead style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB); color:white; font-size:13px;">
                <tr class="text-center">
                    <th style="width:60px;">#</th>
                    <th>Title</th>
                    <th>Quote</th>
                    <th>Action</th>
                </tr>
            </thead>

            <!-- TABLE BODY -->
            <tbody style="font-size:15px;">
                <% for(var i=0; i < data.length; i++) { %>
                    <tr style="background:white;" class="text-center">

                        <td class="fw-bold text-primary py-3">
                            <%= i + 1 %>
                        </td>

                        <td class="text-start fw-semibold text-dark py-3">
                            <%= data[i].title %>
                        </td>

                        <td class="text-start text-muted py-3">
                            <%= data[i].quote %>
                        </td>
                        <td class="text-center py-3">
                            <a href="/admin/services/edit_how_work/<%= data[i].how_work_id %>" title="Edit"
                                class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil">Edit</i>
                            </a>
                            <a href="/admin/services/delete_how_work/<%= data[i].how_work_id %>" title="Delete"
                                class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash">Delete</i>
                            </a>
                        </td>

                    </tr>
                    <% } %>
            </tbody>

        </table>
    </div>

<%- include('../footer.ejs') %>