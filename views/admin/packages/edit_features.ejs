<%- include('../navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

        <div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-edit me-2"></i> Edit Header Package
            </h5>
        </div>

        <div class="card-body">

            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>

          <form action="/admin/update_features_package/<%= feature.id %>" method="POST">

    <!-- Feature name -->
    <div class="mb-3">
        <label class="form-label">Feature Name</label>
        <input type="text"
               class="form-control"
               name="feature"
               value="<%= feature.feature %>"
               required>
    </div>

    <!-- Basic -->
    <div class="mb-3">
        <label class="form-label fw-bold">Include In Basic</label>
        <select name="basic" class="form-control" required>
            <option value="1" <%= feature.basic == 1 ? 'selected' : '' %>>✔</option>
            <option value="0" <%= feature.basic == 0 ? 'selected' : '' %>>❌</option>
        </select>
    </div>

    <!-- Premium -->
    <div class="mb-3">
        <label class="form-label fw-bold">Include In Premium</label>
        <select name="premium" class="form-control" required>
            <option value="1" <%= feature.premium == 1 ? 'selected' : '' %>>✔</option>
            <option value="0" <%= feature.premium == 0 ? 'selected' : '' %>>❌</option>
        </select>
    </div>

    <!-- Luxury -->
    <div class="mb-3">
        <label class="form-label fw-bold">Include In Luxury</label>
        <select name="luxury" class="form-control" required>
            <option value="1" <%= feature.luxury == 1 ? 'selected' : '' %>>✔</option>
            <option value="0" <%= feature.luxury == 0 ? 'selected' : '' %>>❌</option>
        </select>
    </div>

    <div class="d-flex justify-content-between">
        <a href="/admin/add_features" class="btn btn-secondary">
            Back
        </a>
        <button type="submit" class="btn btn-success">
            Update
        </button>
    </div>

</form>



        </div>
    </div>
</div>

<script>
function previewImage(event) {
    const reader = new FileReader();
    const image = document.getElementById("imagePreview");

    reader.onload = function () {
        image.src = reader.result;
    };

    reader.readAsDataURL(event.target.files[0]);
}
</script>

