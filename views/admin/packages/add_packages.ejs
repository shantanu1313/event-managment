<!-- SCRIPTS -->
<script>
// Toastr Configuration
toastr.options = {
    "closeButton": true,
    "progressBar": true,
    "positionClass": "toast-top-right",
    "timeOut": "5000",
    "showMethod": "slideDown",
    "hideMethod": "slideUp"
};

// Initialize Tooltips
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});

// ========== IMAGE UPLOAD ==========
const imageInput = document.getElementById('bg_image');
const imagePreview = document.getElementById('imagePreview');

// File input change
imageInput.addEventListener('change', function(e) {
    if (this.files.length) {
        previewImage(this.files[0]);
    }
});

function previewImage(file) {
    if (file && file.type.startsWith('image/')) {
        const reader = new FileReader();
        reader.onload = function(e) {
            imagePreview.src = e.target.result;
            imagePreview.style.display = 'block';
        }
        reader.readAsDataURL(file);
    }
}

// ========== FEATURES MANAGEMENT ==========
const featureInput = document.getElementById('featureInput');
const featuresList = document.getElementById('featuresList');
const featureHidden = document.getElementById('feature_included');

// Load existing features if any
let features = JSON.parse(featureHidden.value);

function updateFeaturesDisplay() {
    featuresList.innerHTML = '';
    features.forEach((feature, index) => {
        const badge = document.createElement('span');
        badge.className = 'badge bg-primary me-2 mb-2';
        badge.innerHTML = `
            ${feature}
            <button type="button" class="btn-close btn-close-white ms-2" onclick="removeFeature(${index})" style="font-size: 10px;"></button>
        `;
        featuresList.appendChild(badge);
    });
    featureHidden.value = JSON.stringify(features);
}

function addFeature() {
    const feature = featureInput.value.trim();
    if (feature && !features.includes(feature)) {
        features.push(feature);
        updateFeaturesDisplay();
        featureInput.value = '';
        featureInput.focus();
        toastr.success(`Feature "${feature}" added`);
    }
}

function removeFeature(index) {
    const removedFeature = features[index];
    features.splice(index, 1);
    updateFeaturesDisplay();
    toastr.warning(`Feature "${removedFeature}" removed`);
}

// Add feature on Enter key
featureInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        e.preventDefault();
        addFeature();
    }
});

// ========== SUPPORT MANAGEMENT ==========
function addCustomSupport() {
    const customInput = document.getElementById('customSupport');
    const customList = document.getElementById('customSupportList');
    const value = customInput.value.trim();
    
    if (value) {
        const id = 'custom_' + Date.now();
        const badge = document.createElement('span');
        badge.className = 'badge bg-secondary me-2 mb-2';
        badge.innerHTML = `
            ${value}
            <button type="button" class="btn-close btn-close-white ms-2" onclick="removeCustomSupport('${id}')" style="font-size: 10px;"></button>
        `;
        
        // Add checkbox
        const checkboxContainer = document.createElement('div');
        checkboxContainer.className = 'form-check';
        checkboxContainer.innerHTML = `
            <input class="form-check-input" type="checkbox" name="support" value="${value}" id="${id}" checked>
            <label class="form-check-label" for="${id}">
                ${value}
            </label>
        `;
        
        document.querySelector('.support-section .row').appendChild(checkboxContainer);
        customList.appendChild(badge);
        customInput.value = '';
        
        toastr.success(`Custom support option "${value}" added`);
    }
}

function removeCustomSupport(id) {
    const checkbox = document.getElementById(id);
    if (checkbox) {
        checkbox.parentElement.remove();
    }
    document.querySelector(`.support-tag i[onclick="removeCustomSupport('${id}')"]`).parentElement.remove();
}

// ========== FORM VALIDATION ==========
document.getElementById('packageForm').addEventListener('submit', function(e) {
    // Validate features
    if (features.length === 0) {
        e.preventDefault();
        toastr.error('Please add at least one feature for the package');
        featureInput.focus();
        return;
    }
    
    // Validate price
    const price = parseFloat(this.start_price.value);
    if (price <= 0) {
        e.preventDefault();
        toastr.error('Please enter a valid price greater than 0');
        this.start_price.focus();
        return;
    }
    
    // Show loading
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Saving...';
    submitBtn.disabled = true;
    
    // Re-enable after 5 seconds if still processing
    setTimeout(() => {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }, 5000);
});

updateFeaturesDisplay(); // Initialize features display
</script>
