<%- include('../navbar.ejs') %>

<% if (success) { %>
<div class="alert alert-success alert-dismissible fade show m-3 animate__animated animate__fadeInDown">
    <i class="fas fa-check-circle me-2"></i>
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<% if (error) { %>
<div class="alert alert-danger alert-dismissible fade show m-3 animate__animated animate__shakeX">
    <i class="fas fa-exclamation-circle me-2"></i>
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<!-- START OF DASHBOARD CONTENT -->
<div class="dashboard-content">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-dark mb-0">
                    <i class="fas fa-box-open me-3"></i>
                    Package Management
                </h2>
                <p class="text-muted mb-0">Manage all your event packages</p>
            </div>
            <button class="btn btn-primary btn-lg pulse" data-bs-toggle="modal" data-bs-target="#addPackageModal">
                <i class="fas fa-plus-circle me-2"></i> Add New Package
            </button>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <% if(packages.length===0){ %>
                    <div class="text-center py-5">
                        <div class="empty-state">
                            <i class="fas fa-box-open fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">No Packages Found</h4>
                            <p class="text-muted mb-4">Start by adding your first package</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPackageModal">
                                <i class="fas fa-plus me-2"></i> Add Package
                            </button>
                        </div>
                    </div>
                    <% } else { %>
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;">#</th>
                                <th style="width: 250px;">Package</th>
                                <th style="width: 120px;">Type</th>
                                <th style="width: 120px;">Price</th>
                                <th style="width: 100px;">Guests</th>
                                <th style="width: 200px;">Features</th>
                                <th style="width: 200px;">Support</th>
                                <th style="width: 150px;">Date</th>
                                <th style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% packages.forEach(function(pkg,i){ %>
                            <tr>
                                <td class="text-center">
                                    <span class="badge bg-secondary"><%= i+1 %></span>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <% if(pkg.bg_image) { %>
                                        <div class="me-3">
                                            <img src="/upload/packages/<%= pkg.bg_image %>"
                                                 alt="<%= pkg.package_name %>" 
                                                 class="package-img"
                                                 style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;"
                                                 onerror="this.src='https://via.placeholder.com/80x80/667eea/ffffff?text=P'">
                                        </div>
                                        <% } %>
                                        <div>
                                            <strong class="d-block"><%= pkg.package_name %></strong>
                                            <small class="text-muted">
                                                <i class="fas fa-tag me-1"></i>
                                                <%= pkg.service || 'No Category' %>
                                            </small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-info rounded-pill px-3 py-2">
                                        <i class="fas fa-tag me-1"></i>
                                        <%= pkg.type %>
                                    </span>
                                </td>

                                <td>
                                    <div class="price-display">
                                        <span class="fw-bold text-primary fs-5">
                                            ₹<%= pkg.start_price %>
                                        </span>
                                        <small class="d-block text-muted">Starting from</small>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-users me-2 text-secondary"></i>
                                        <span class="fw-semibold"><%= pkg.max_guests || 'N/A' %></span>
                                    </div>
                                </td>

                                <td>
                                    <ul class="list-unstyled mb-0">
                                        <% (pkg.feature_included||[]).slice(0,3).forEach(f=>{ %>
                                        <li class="mb-1">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <small><%= f %></small>
                                        </li>
                                        <% }) %>
                                        <% if((pkg.feature_included||[]).length > 3) { %>
                                        <li class="text-primary">
                                            <small>+<%= (pkg.feature_included||[]).length - 3 %> more</small>
                                        </li>
                                        <% } %>
                                    </ul>
                                </td>

                                <td>
                                    <ul class="list-unstyled mb-0">
                                        <% (pkg.support||[]).slice(0,3).forEach(s=>{ %>
                                        <li class="mb-1">
                                            <i class="fas fa-circle text-primary me-2" style="font-size: 8px;"></i>
                                            <small><%= s %></small>
                                        </li>
                                        <% }) %>
                                        <% if((pkg.support||[]).length > 3) { %>
                                        <li class="text-primary">
                                            <small>+<%= (pkg.support||[]).length - 3 %> more</small>
                                        </li>
                                        <% } %>
                                    </ul>
                                </td>

                                <td>
                                    <div class="date-display">
                                        <i class="far fa-calendar me-2 text-secondary"></i>
                                        <span class="d-block"><%= pkg.formatted_date || 'N/A' %></span>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex">
                                        <a href="/admin/edit_package/<%= pkg.id %>" 
                                           class="btn btn-sm btn-warning me-2"
                                           data-bs-toggle="tooltip" 
                                           data-bs-placement="top" 
                                           title="Edit Package">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/admin/delete_package/<%= pkg.id %>" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Are you sure you want to delete this package?')"
                                           data-bs-toggle="tooltip" 
                                           data-bs-placement="top" 
                                           title="Delete Package">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END OF DASHBOARD CONTENT -->

<!-- ADD PACKAGE MODAL -->
<div class="modal fade" id="addPackageModal" tabindex="-1" aria-labelledby="addPackageModalLabel" aria-hidden="true">
