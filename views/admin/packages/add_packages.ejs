<%- include("../navbar.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Packages - Admin Panel</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --success-color: #4cc9f0;
            --light-bg: #f8f9fa;
            --dark-bg: #212529;
            --border-color: #dee2e6;
        }
        
        body {
            background-color: #f5f7fb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .sidebar {
            background: linear-gradient(180deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            min-height: 100vh;
            box-shadow: 3px 0 15px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85);
            padding: 12px 20px;
            margin: 5px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
        }
        
        .sidebar .nav-link i {
            width: 25px;
            text-align: center;
            margin-right: 10px;
        }
        
        .main-content {
            padding: 20px;
        }
        
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
            margin-bottom: 20px;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .card-header {
            background-color: white;
            border-bottom: 1px solid var(--border-color);
            font-weight: 600;
            padding: 15px 20px;
            border-radius: 12px 12px 0 0 !important;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
        }
        
        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .table {
            margin-bottom: 0;
        }
        
        .table thead th {
            border-bottom: 2px solid var(--primary-color);
            font-weight: 600;
            color: var(--dark-bg);
            background-color: rgba(67, 97, 238, 0.05);
        }
        
        .table tbody tr {
            transition: background-color 0.2s ease;
        }
        
        .table tbody tr:hover {
            background-color: rgba(67, 97, 238, 0.03);
        }
        
        .badge {
            padding: 6px 12px;
            font-weight: 500;
            border-radius: 20px;
        }
        
        .badge-basic {
            background-color: #e9ecef;
            color: #495057;
        }
        
        .badge-premium {
            background-color: #fff3cd;
            color: #856404;
        }
        
        .badge-vip {
            background-color: #d1ecf1;
            color: #0c5460;
        }
        
        .package-image {
            width: 80px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid var(--border-color);
        }
        
        .feature-list, .support-list {
            list-style-type: none;
            padding-left: 0;
            margin-bottom: 0;
        }
        
        .feature-list li, .support-list li {
            padding: 3px 0;
            font-size: 0.9rem;
        }
        
        .feature-list li:before {
            content: "✓";
            color: var(--success-color);
            margin-right: 8px;
            font-weight: bold;
        }
        
        .support-list li:before {
            content: "•";
            color: var(--primary-color);
            margin-right: 8px;
            font-weight: bold;
        }
        
        .action-buttons .btn {
            padding: 5px 10px;
            font-size: 0.85rem;
            margin-right: 5px;
        }
        
        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 8px;
        }
        
        .form-control, .form-select {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px 15px;
            transition: border-color 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }
        
        .file-upload {
            position: relative;
            overflow: hidden;
        }
        
        .file-upload-input {
            position: absolute;
            font-size: 100px;
            right: 0;
            top: 0;
            opacity: 0;
            cursor: pointer;
        }
        
        .file-upload-label {
            display: block;
            padding: 12px;
            background-color: #f8f9fa;
            border: 2px dashed #ced4da;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .file-upload-label:hover {
            background-color: #e9ecef;
            border-color: var(--primary-color);
        }
        
        .file-upload-label i {
            font-size: 24px;
            color: var(--primary-color);
            margin-bottom: 8px;
        }
        
        .preview-image {
            max-width: 100%;
            max-height: 200px;
            border-radius: 8px;
            margin-top: 10px;
            display: none;
        }
        
        .stats-card {
            text-align: center;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
        }
        
        .stats-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            opacity: 0.8;
        }
        
        .stats-value {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .stats-label {
            font-size: 0.9rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .modal-header {
            background-color: var(--primary-color);
            color: white;
            border-radius: 12px 12px 0 0;
        }
        
        .pagination .page-link {
            color: var(--primary-color);
            border: 1px solid #dee2e6;
            margin: 0 3px;
            border-radius: 6px;
        }
        
        .pagination .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        @media (max-width: 768px) {
            .sidebar {
                min-height: auto;
            }
            
            .action-buttons {
                display: flex;
                flex-direction: column;
            }
            
            .action-buttons .btn {
                margin-bottom: 5px;
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Success/Error Messages -->
    <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-check-circle me-2"></i> <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0 sidebar">
                <div class="d-flex flex-column align-items-center py-4">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-white d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-cube text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5 class="mt-3 mb-1">Admin Panel</h5>
                        <p class="text-light small">Package Management</p>
                    </div>
                    
                    <nav class="w-100">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" href="/admin/add_packages">
                                    <i class="fas fa-box"></i> Packages
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/dashboard">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/bookings">
                                    <i class="fas fa-calendar-check"></i> Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/users">
                                    <i class="fas fa-users"></i> Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/settings">
                                    <i class="fas fa-cog"></i> Settings
                                </a>
                            </li>
                            <li class="nav-item mt-4">
                                <a class="nav-link text-warning" href="/admin/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="mb-1">Package Management</h2>
                        <p class="text-muted mb-0">Add and manage your service packages</p>
                    </div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPackageModal">
                        <i class="fas fa-plus me-2"></i> Add New Package
                    </button>
                </div>
                
                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stats-card bg-white">
                            <div class="stats-icon text-primary">
                                <i class="fas fa-box"></i>
                            </div>
                            <div class="stats-value"><%= packages.length %></div>
                            <div class="stats-label">Total Packages</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card bg-white">
                            <div class="stats-icon text-success">
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="stats-value">
                                <% 
                                let premiumCount = packages.filter(p => p.type === 'Premium').length;
                                %>
                                <%= premiumCount %>
                            </div>
                            <div class="stats-label">Premium Packages</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card bg-white">
                            <div class="stats-icon text-warning">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stats-value">
                                <%
                                let totalGuests = packages.reduce((sum, pkg) => sum + (pkg.max_guests || 0), 0);
                                %>
                                <%= totalGuests %>
                            </div>
                            <div class="stats-label">Total Capacity</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card bg-white">
                            <div class="stats-icon text-info">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div class="stats-value">
                                <%
                                let avgPrice = packages.length > 0 
                                    ? packages.reduce((sum, pkg) => sum + (pkg.start_price || 0), 0) / packages.length 
                                    : 0;
                                %>
                                $<%= avgPrice.toFixed(2) %>
                            </div>
                            <div class="stats-label">Avg. Price</div>
                        </div>
                    </div>
                </div>
                
                <!-- Filter Bar -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/admin/add_packages" class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Search</label>
                                <input type="text" class="form-control" name="search" placeholder="Package name..." value="<%= query.search || '' %>">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Type</label>
                                <select class="form-select" name="type">
                                    <option value="">All Types</option>
                                    <% packageTypes.forEach(function(type) { %>
                                        <option value="<%= type %>" <%= query.type === type ? 'selected' : '' %>><%= type %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Min Price</label>
                                <input type="number" class="form-control" name="minPrice" placeholder="$0" value="<%= query.minPrice || '' %>">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Max Price</label>
                                <input type="number" class="form-control" name="maxPrice" placeholder="$10000" value="<%= query.maxPrice || '' %>">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-filter me-2"></i> Filter
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Packages Table -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">All Packages</h5>
                        <span class="badge bg-primary">
                            <%= pagination.totalItems %> Total
                        </span>
                    </div>
                    <div class="card-body">
                        <% if (packages.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-box-open text-muted" style="font-size: 4rem;"></i>
                                <h4 class="mt-3">No Packages Found</h4>
                                <p class="text-muted">Add your first package to get started</p>
                                <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#addPackageModal">
                                    <i class="fas fa-plus me-2"></i> Add Package
                                </button>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Package</th>
                                            <th>Type</th>
                                            <th>Price</th>
                                            <th>Capacity</th>
                                            <th>Features</th>
                                            <th>Support</th>
                                            <th>Created</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% packages.forEach(function(pkg, index) { %>
                                            <tr>
                                                <td><%= (pagination.currentPage - 1) * 10 + index + 1 %></td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <% if (pkg.image_url) { %>
                                                            <img src="<%= pkg.image_url %>" alt="<%= pkg.package_name %>" class="package-image me-3">
                                                        <% } else { %>
                                                            <div class="package-image bg-light d-flex align-items-center justify-content-center me-3">
                                                                <i class="fas fa-box text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                        <div>
                                                            <h6 class="mb-1"><%= pkg.package_name %></h6>
                                                            <small class="text-muted"><%= pkg.service || 'No service' %></small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% 
                                                    let badgeClass = 'badge-basic';
                                                    if (pkg.type === 'Premium') badgeClass = 'badge-premium';
                                                    if (pkg.type === 'VIP') badgeClass = 'badge-vip';
                                                    %>
                                                    <span class="badge <%= badgeClass %>"><%= pkg.type %></span>
                                                </td>
                                                <td>
                                                    <strong><%= pkg.formatted_price %></strong>
                                                </td>
                                                <td>
                                                    <i class="fas fa-users text-muted me-1"></i>
                                                    <%= pkg.max_guests %>
                                                </td>
                                                <td>
                                                    <ul class="feature-list">
                                                        <% 
                                                        let features = pkg.feature_included || [];
                                                        let displayFeatures = features.slice(0, 2);
                                                        displayFeatures.forEach(function(feature) { %>
                                                            <li><%= feature %></li>
                                                        <% }); %>
                                                        <% if (features.length > 2) { %>
                                                            <li class="text-muted">+<%= features.length - 2 %> more</li>
                                                        <% } %>
                                                    </ul>
                                                </td>
                                                <td>
                                                    <ul class="support-list">
                                                        <% 
                                                        let supports = pkg.support || [];
                                                        supports.slice(0, 2).forEach(function(support) { %>
                                                            <li><%= support %></li>
                                                        <% }); %>
                                                        <% if (supports.length > 2) { %>
                                                            <li class="text-muted">+<%= supports.length - 2 %> more</li>
                                                        <% } %>
                                                    </ul>
                                                </td>
                                                <td><%= pkg.formatted_date %></td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <button class="btn btn-sm btn-outline-primary" 
                                                                onclick="viewPackage(<%= pkg.id %>)">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-warning" 
                                                                onclick="editPackage(<%= pkg.id %>)">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" 
                                                                onclick="deletePackage(<%= pkg.id %>, '<%= pkg.package_name %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Pagination -->
                            <% if (pagination.totalPages > 1) { %>
                                <nav aria-label="Page navigation" class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item <%= pagination.hasPrevPage ? '' : 'disabled' %>">
                                            <a class="page-link" href="?page=<%= pagination.prevPage %>&<%= new URLSearchParams(query).toString() %>">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        </li>
                                        
                                        <% 
                                        let startPage = Math.max(1, pagination.currentPage - 2);
                                        let endPage = Math.min(pagination.totalPages, startPage + 4);
                                        startPage = Math.max(1, endPage - 4);
                                        
                                        for (let i = startPage; i <= endPage; i++) { %>
                                            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&<%= new URLSearchParams(query).toString() %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>
                                        
                                        <li class="page-item <%= pagination.hasNextPage ? '' : 'disabled' %>">
                                            <a class="page-link" href="?page=<%= pagination.nextPage %>&<%= new URLSearchParams(query).toString() %>">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Add Package Modal -->
    <div class="modal fade" id="addPackageModal" tabindex="-1" aria-labelledby="addPackageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addPackageModalLabel">
                        <i class="fas fa-plus-circle me-2"></i> Add New Package
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/admin/save_packages" method="POST" enctype="multipart/form-data" id="packageForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Package Type <span class="text-danger">*</span></label>
                                <select class="form-select" name="type" required>
                                    <option value="">Select Type</option>
                                    <option value="Basic">Basic</option>
                                    <option value="Standard">Standard</option>
                                    <option value="Premium">Premium</option>
                                    <option value="VIP">VIP</option>
                                    <option value="Custom">Custom</option>
                                </select>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Package Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="package_name" placeholder="Enter package name" required>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Service Category</label>
                                <select class="form-select" name="service">
                                    <option value="">Select Service</option>
                                    <option value="Wedding">Wedding</option>
                                    <option value="Corporate">Corporate</option>
                                    <option value="Birthday">Birthday</option>
                                    <option value="Conference">Conference</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Starting Price ($) <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" name="start_price" placeholder="0.00" step="0.01" min="0" required>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Maximum Guests</label>
                                <input type="number" class="form-control" name="max_guests" placeholder="50" min="1">
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Background Image</label>
                                <div class="file-upload">
                                    <input type="file" class="file-upload-input" id="bg_image" name="bg_image" accept="image/*">
                                    <label for="bg_image" class="file-upload-label">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <div>Click to upload image</div>
                                        <small class="text-muted">JPEG, PNG, WebP (Max 5MB)</small>
                                    </label>
                                    <img id="imagePreview" class="preview-image" alt="Image preview">
                                </div>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" name="description" rows="3" placeholder="Describe the package..."></textarea>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label class="form-label">Features Included</label>
                                <div class="border rounded p-3">
                                    <div id="featuresContainer">
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control feature-input" placeholder="Add a feature">
                                            <button class="btn btn-outline-success" type="button" onclick="addFeature()">
                                                <i class="fas fa-plus"></i> Add
                                            </button>
                                        </div>
                                    </div>
                                    <div id="featuresList" class="mt-2"></div>
                                    <input type="hidden" name="feature_included" id="feature_included" value="[]">
                                </div>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label class="form-label">Support Options</label>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="24/7 Support" id="support1">
                                            <label class="form-check-label" for="support1">
                                                24/7 Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Email Support" id="support2">
                                            <label class="form-check-label" for="support2">
                                                Email Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Phone Support" id="support3">
                                            <label class="form-check-label" for="support3">
                                                Phone Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="On-site Support" id="support4">
                                            <label class="form-check-label" for="support4">
                                                On-site Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Dedicated Manager" id="support5">
                                            <label class="form-check-label" for="support5">
                                                Dedicated Manager
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Training" id="support6">
                                            <label class="form-check-label" for="support6">
                                                Training
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mt-2">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="customSupport" placeholder="Custom support option">
                                            <button class="btn btn-outline-secondary" type="button" onclick="addCustomSupport()">
                                                Add
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i> Save Package
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- View Package Modal -->
    <div class="modal fade" id="viewPackageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Package Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="packageDetails">
                    <!-- Details will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete package: <strong id="deletePackageName"></strong>?</p>
                    <p class="text-danger"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <script>
        // Image preview
        document.getElementById('bg_image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
        
        // Features management
        let features = [];
        
        function addFeature() {
            const input = document.querySelector('.feature-input');
            const feature = input.value.trim();
            
            if (feature) {
                features.push(feature);
                updateFeaturesList();
                input.value = '';
            }
        }
        
        function removeFeature(index) {
            features.splice(index, 1);
            updateFeaturesList();
        }
        
        function updateFeaturesList() {
            const list = document.getElementById('featuresList');
            const hiddenInput = document.getElementById('feature_included');
            
            list.innerHTML = '';
            
            features.forEach((feature, index) => {
                const badge = document.createElement('span');
                badge.className = 'badge bg-light text-dark me-2 mb-2';
                badge.innerHTML = `${feature} <button type="button" class="btn-close btn-close-sm" onclick="removeFeature(${index})"></button>`;
                list.appendChild(badge);
            });
            
            hiddenInput.value = JSON.stringify(features);
        }
        
        // Custom support option
        function addCustomSupport() {
            const input = document.getElementById('customSupport');
            const value = input.value.trim();
            
            if (value) {
                // Create a new checkbox
                const container = document.querySelector('.row:last-child');
                const col = document.createElement('div');
                col.className = 'col-md-3';
                col.innerHTML = `
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="support" value="${value}" checked>
                        <label class="form-check-label">${value}</label>
                    </div>
                `;
                container.insertBefore(col, container.lastElementChild);
                input.value = '';
            }
        }
        
        // View package
        function viewPackage(id) {
            fetch(`/admin/package/${id}`)
                .then(response => response.json())
                .then(data => {
                    const modal = document.getElementById('packageDetails');
                    modal.innerHTML = `
                        <div class="row">
                            <div class="col-md-4">
                                ${data.bg_image ? 
                                    `<img src="/upload/packages/${data.bg_image}" class="img-fluid rounded" alt="${data.package_name}">` : 
                                    `<div class="bg-light rounded p-5 text-center">
                                        <i class="fas fa-box text-muted" style="font-size: 3rem;"></i>
                                    </div>`
                                }
                            </div>
                            <div class="col-md-8">
                                <h4>${data.package_name}</h4>
                                <p class="text-muted">${data.service || 'No service specified'}</p>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <strong>Type:</strong>
                                        <span class="badge ${getBadgeClass(data.type)} ms-2">${data.type}</span>
                                    </div>
                                    <div class="col-6">
                                        <strong>Price:</strong>
                                        <span class="ms-2">$${parseFloat(data.start_price).toFixed(2)}</span>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <strong>Max Guests:</strong>
                                        <span class="ms-2">${data.max_guests}</span>
                                    </div>
                                    <div class="col-6">
                                        <strong>Created:</strong>
                                        <span class="ms-2">${new Date(data.created_at).toLocaleDateString()}</span>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <strong>Description:</strong>
                                    <p class="mt-1">${data.description || 'No description provided.'}</p>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Features:</strong>
                                        <ul class="mt-1">
                                            ${data.feature_included && data.feature_included.length > 0 ?
                                                data.feature_included.map(f => `<li>${f}</li>`).join('') :
                                                '<li class="text-muted">No features added</li>'
                                            }
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Support:</strong>
                                        <ul class="mt-1">
                                            ${data.support && data.support.length > 0 ?
                                                data.support.map(s => `<li>${s}</li>`).join('') :
                                                '<li class="text-muted">No support options</li>'
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    new bootstrap.Modal(document.getElementById('viewPackageModal')).show();
                })
                .catch(error => {
                    console.error('Error:', error);
                    toastr.error('Failed to load package details');
                });
        }
        
        function getBadgeClass(type) {
            switch(type) {
                case 'Premium': return 'badge-premium';
                case 'VIP': return 'badge-vip';
                default: return 'badge-basic';
            }
        }
        
        // Edit package
        function editPackage(id) {
            // Redirect to edit page or load edit modal
            window.location.href = `/admin/edit_package/${id}`;
        }
        
        // Delete package
        let packageToDelete = null;
        
        function deletePackage(id, name) {
            packageToDelete = id;
            document.getElementById('deletePackageName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
        
        document.getElementById('confirmDelete').addEventListener('click', function() {
            if (packageToDelete) {
                fetch(`/admin/delete_package/${packageToDelete}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        toastr.success('Package deleted successfully');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        toastr.error(data.message || 'Failed to delete package');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    toastr.error('Failed to delete package');
                })
                .finally(() => {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                });
            }
        });
        
        // Form validation
        document.getElementById('packageForm').addEventListener('submit', function(e) {
            const price = document.querySelector('input[name="start_price"]').value;
            if (parseFloat(price) < 0) {
                e.preventDefault();
                toastr.error('Price cannot be negative');
            }
        });
        
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
        
        // Toastr configuration
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };
        
        // Show toast on page load if there are messages
        <% if (success) { %>
            toastr.success('<%= success %>');
        <% } %>
        
        <% if (error) { %>
            toastr.error('<%= error %>');
        <% } %>
    </script>
</body>
</html>
