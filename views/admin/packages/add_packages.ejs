                    <i class="fas fa-plus-circle me-2"></i>
                    Add New Package
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="/admin/save_packages" method="POST" enctype="multipart/form-data" id="packageForm">
                <div class="modal-body">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <div class="image-upload-container border rounded p-3 text-center">
                                        <input type="file" class="form-control" id="bg_image" name="bg_image" accept="image/*">
                                        <label for="bg_image" class="image-upload-label">
                                            <div class="upload-icon mb-2">
                                                <i class="fas fa-cloud-upload-alt fa-2x text-primary"></i>
                                            </div>
                                            <div class="fs-5 fw-semibold mb-2">Upload Package Image</div>
                                            <small class="text-muted">Click to upload</small>
                                            <small class="d-block text-muted mt-1">JPG, PNG, WebP (Max 10MB)</small>
                                        </label>
                                        <img id="imagePreview" class="image-preview mt-3 rounded" alt="Preview" style="display: none; max-height: 200px;">
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-tag"></i> Package Type *
                                    </label>
                                    <select class="form-select" name="type" required>
                                        <option value="">Select Type</option>
                                        <option value="Basic">Basic</option>
                                        <option value="Standard">Standard</option>
                                        <option value="Premium">Premium</option>
                                        <option value="VIP">VIP</option>
                                        <option value="Custom">Custom</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-box"></i> Package Name *
                                    </label>
                                    <input type="text" class="form-control" name="package_name" placeholder="Enter package name" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-layer-group"></i> Service Category
                                    </label>
                                    <select class="form-select" name="service">
                                        <option value="">Select Service</option>
                                        <option value="Wedding">Wedding</option>
                                        <option value="Corporate">Corporate</option>
                                        <option value="Birthday">Birthday</option>
                                        <option value="Conference">Conference</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-dollar-sign"></i> Starting Price ($) *
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">₹</span>
                                        <input type="number" class="form-control" name="start_price" placeholder="0.00" step="0.01" min="0" required>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label">
                                        <i class="fas fa-users"></i> Maximum Guests
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" name="max_guests" placeholder="50" min="1">
                                        <span class="input-group-text">
                                            <i class="fas fa-user-friends"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label class="form-label">
                                        <i class="fas fa-align-left"></i> Description
                                    </label>
                                    <textarea class="form-control" name="description" rows="4" placeholder="Describe the package..."></textarea>
                                    <small class="text-muted">Maximum 500 characters</small>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <!-- Features Section -->
                            <div class="features-section border rounded p-3 mb-4">
                                <label class="form-label">
                                    <i class="fas fa-star"></i> Features Included
                                </label>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="featureInput" placeholder="Add a feature (e.g., Free Wi-Fi)">
                                        <button class="btn btn-outline-primary" type="button" onclick="addFeature()">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    </div>
                                    <small class="text-muted d-block mt-2">Press Enter to add feature</small>
                                </div>
                                <div id="featuresList" class="d-flex flex-wrap gap-2 mb-3"></div>
                                <input type="hidden" name="feature_included" id="feature_included" value="[]">
                            </div>

                            <!-- Support Section -->
                            <div class="support-section border rounded p-3">
                                <label class="form-label">
                                    <i class="fas fa-headset"></i> Support Options
                                </label>
                                <div class="row mb-3">
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="24/7 Support" id="support1">
                                            <label class="form-check-label" for="support1">
                                                <i class="fas fa-clock me-2"></i>24/7 Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Email Support" id="support2">
                                            <label class="form-check-label" for="support2">
                                                <i class="fas fa-envelope me-2"></i>Email Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Phone Support" id="support3">
                                            <label class="form-check-label" for="support3">
                                                <i class="fas fa-phone me-2"></i>Phone Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="On-site Support" id="support4">
                                            <label class="form-check-label" for="support4">
                                                <i class="fas fa-map-marker-alt me-2"></i>On-site Support
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Dedicated Manager" id="support5">
                                            <label class="form-check-label" for="support5">
                                                <i class="fas fa-user-tie me-2"></i>Dedicated Manager
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="support" value="Training" id="support6">
                                            <label class="form-check-label" for="support6">
                                                <i class="fas fa-graduation-cap me-2"></i>Training
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="customSupport" placeholder="Custom support option">
                                        <button class="btn btn-outline-secondary" type="button" onclick="addCustomSupport()">
                                            <i class="fas fa-plus"></i> Add Custom
                                        </button>
                                    </div>
                                    <div id="customSupportList" class="d-flex flex-wrap gap-2 mt-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Save Package
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

