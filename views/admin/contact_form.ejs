    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <style>
        /* ===== PAGE BACKGROUND ===== */
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        /* ===== PAGE TITLE ===== */
        h4.page-title {
            color: #0d6efd;
            font-weight: 600;
        }

        /* ===== CARD ===== */
        .card {
            border-radius: 10px;
            border: none;
            overflow: hidden;
        }

        .card-header {
            background-color: #0d6efd;
            color: #fff;
            font-weight: 600;
            padding: 12px 18px;
        }

        .badge.bg-success {
            background-color: #198754;
            font-size: 0.85rem;
            padding: 6px 10px;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background-color: #212529;
            color: #fff;
            text-align: center;
            vertical-align: middle;
        }

        .table tbody td {
            vertical-align: middle;
            font-size: 0.9rem;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f7ff;
        }

        .text-primary {
            color: #0d6efd !important;
        }

        .text-success {
            color: #198754 !important;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .text-truncate {
            max-width: 250px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .btn-sm {
            padding: 4px 10px;
            font-size: 0.8rem;
        }

        .table-responsive {
            border-radius: 0 0 10px 10px;
        }
    </style>
