<%- include('navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

        <div class="container-fluid mt-4">

    <!-- PAGE TITLE -->
    <h4 class="page-title mb-3">
        <i class="fas fa-envelope-open-text me-2"></i>
        Contact Form Enquiries
    </h4>

    <!-- CARD -->
    <div class="card shadow-sm">

        <!-- CARD HEADER -->
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>
                <i class="fas fa-list me-2"></i> Enquiry List
            </span>
            <span class="badge bg-success">
                Total : <%= forms.length %>
            </span>
        </div>

        <!-- CARD BODY -->
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped align-middle">

                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Event</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>

                        <% if(forms.length === 0){ %>
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                No enquiries found
                            </td>
                        </tr>
                        <% } %>

                        <% forms.forEach((f, i) => { %>
                        <tr>

                            <td class="text-center fw-bold"><%= i + 1 %></td>

                            <td>
                                <i class="fas fa-user text-primary me-1"></i>
                                <%= f.full_name %>
                            </td>

                            <td>
                                <i class="fas fa-envelope text-danger me-1"></i>
                                <%= f.email %>
                            </td>

                            <td>
                                <i class="fas fa-phone text-success me-1"></i>
                                <%= f.phone %>
                            </td>

                            <td class="text-center">
                                <span class="badge bg-info text-dark">
                                    <%= f.event_type %>
                                </span>
                            </td>

                            <td><%= f.subject %></td>

                            <td>
                                <div class="text-truncate" title="<%= f.message %>">
                                    <%= f.message %>
                                </div>
                            </td>
                          

                            <td class="text-center">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= new Date(f.created_at).toLocaleString() %>
                                </small>
                            </td>


                            <td class="text-center">
                                <a href="/admin/edit_contact_form/<%= f.id %>" 
                                   class="btn btn-sm btn-primary mb-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                <a href="/admin/delete_contact_form/<%= f.id %>" 
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>

                        </tr>
                        <% }) %>

                    </tbody>

                </table>
            </div>

        </div>
    </div>

</div>

<%- include('footer.ejs') %>