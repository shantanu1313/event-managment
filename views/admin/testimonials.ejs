<%- include("navbar.ejs") %>

    <div class="container-fluid mt-4 px-4">

        <!-- Page Header -->
        <div class="d-flex align-items-center mb-4 p-3 rounded shadow-sm"
            style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB); color: white;">
            <h3 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Client Testimonials</h3>
        </div>

        <div class="card shadow-sm border-0" style="border-radius: 14px; background: #F8FAFF;">
            <div class="card-body p-3">

                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-nowrap"
                        style="border-radius:12px; overflow:hidden;">

                        <!-- Table Header -->
                        <thead style="background: linear-gradient(135deg, #0B5ED7, #3BC9DB); color: white;">
                            <tr class="text-center">
                                <th style="width:50px;">#</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Event Type</th>
                                <th>Rating</th>
                                <th style="min-width:300px;">Message</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <!-- Table Body -->
                        <tbody>
                            <% if(data.length===0){ %>
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No testimonials found</td>
                                </tr>
                                <% } else { %>
                                    <% data.forEach(function(item, index){ %>
                                        <tr style="background:#ffffff; transition: all 0.3s;"
                                            class="align-middle text-center">

                                            <!-- Index -->
                                            <td class="fw-bold text-primary">
                                                <%= index + 1 %>
                                            </td>

                                            <!-- Image -->
                                            <td>
                                                <% if(item.image){ %>
                                                    <img src="/upload/testimonials/<%= item.image %>" width="50"
                                                        height="50" class="rounded-circle shadow-sm"
                                                        style="object-fit:cover;">
                                                    <% } else { %>
                                                        <span class="text-muted">No Image</span>
                                                        <% } %>
                                            </td>

                                            <!-- Name -->
                                            <td class="fw-semibold text-dark text-start">
                                                <%= item.name %>
                                            </td>

                                            <!-- Event Type -->
                                            <td>
                                                <span class="badge" style="background:#E0F7FA; color:#006064;">
                                                    <%= item.event_type %>
                                                </span>
                                            </td>

                                            <!-- Rating -->
                                            <td class="text-warning">
                                                <% for(let i=1; i <=item.rating; i++){ %>â˜…<% } %>
                                                        <small class="text-muted">(<%= item.rating %>)</small>
                                            </td>

                                            <!-- Message -->
                                            <td class="text-start text-muted text-wrap" style="white-space: normal;">
                                                <%= item.message %>
                                            </td>

                                            <!-- Actions -->
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    <a href="/admin/testimonial-edit/<%= item.id %>"
                                                        class="btn btn-sm btn-outline-primary rounded-pill">
                                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                                    </a>
                                                    <a href="/admin/testimonial-delete/<%= item.id %>"
                                                        class="btn btn-sm btn-outline-danger rounded-pill"
                                                        onclick="return confirm('Are you sure you want to delete this testimonial?')">
                                                        <i class="bi bi-trash me-1"></i>Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>
                        </tbody>

                    </table>
                </div>

            </div>
        </div>

    </div>

    <%- include("footer.ejs") %>