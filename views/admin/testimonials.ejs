<%- include("navbar.ejs") %>

<div class="container-fluid mt-4 px-4">
    <h3 class="mb-3">Client Testimonials</h3>

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-nowrap">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Event Type</th>
                            <th>Rating</th>
                            <th style="min-width:300px;">Message</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(data.length===0){ %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">No testimonials found</td>
                            </tr>
                        <% } else { %>
                            <% data.forEach(function(item, index){ %>
                                <tr>
                                    <td class="text-center"><%= index + 1 %></td>

                                    <td class="text-center">
                                        <% if(item.image){ %>
                                            <img src="/upload/testimonials/<%= item.image %>" width="50" height="50" class="rounded-circle" style="object-fit:cover;">
                                        <% } else { %>
                                            <span class="text-muted">No Image</span>
                                        <% } %>
                                    </td>

                                    <td><strong><%= item.name %></strong></td>

                                    <td class="text-center">
                                        <span class="badge bg-info text-dark"><%= item.event_type %></span>
                                    </td>

                                    <td class="text-center text-warning">
                                        <% for(let i=1; i<=item.rating; i++){ %>â˜…<% } %>
                                    </td>

                                    <td class="text-wrap" style="white-space: normal;"><%= item.message %></td>

                                    <td class="text-center">
                                        <a href="/admin/testimonial-edit/<%= item.id %>" class="btn btn-sm btn-primary mb-1">Edit</a>
                                        <a href="/admin/testimonial-delete/<%= item.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this testimonial?')">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<%- include("footer.ejs") %>

