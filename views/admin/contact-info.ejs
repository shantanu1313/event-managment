<%- include('navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

                <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-12 px-md-4 py-4">

            <h3 class="mb-4"><i class="fas fa-address-book me-2"></i>Contact Info</h3>

            <!-- Add Contact Info Form -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">Add Contact Info</div>
                <div class="card-body">
                    <form action="/admin/save_contact_info" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Address</label>
                                <input type="text" name="address" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Phone</label>
                                <input type="text" name="phone" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Email</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>WhatsApp</label>
                                <input type="text" name="whatsapp" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Map URL</label>
                                <input type="text" name="map_url" class="form-control">
                            </div>
                        </div>
                        <button class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Save
                        </button>
                    </form>
                </div>
            </div>

            <!-- Contact List Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">Contact List</div>
                <div class="card-body p-0">
                    <table class="table table-bordered table-hover m-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>WhatsApp</th>
                                <th>Map URL</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(contacts.length == 0){ %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">No Data Found</td>
                            </tr>
                        <% } %>

                        <% contacts.forEach(c => { %>
                            <tr>
                                <td><%= c.id %></td>
                                <td><%= c.address %></td>
                                <td><%= c.phone %></td>
                                <td><%= c.email %></td>
                                <td><%= c.whatsapp %></td>
                                <td>
                                    <% if(c.map_url){ %>
                                        <a href="<%= c.map_url %>" target="_blank">View Map</a>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <a href="/admin/edit-contact-info/<%= c.id %>" class="btn btn-sm btn-primary me-1">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

        </main>

<%- include('footer.ejs') %>