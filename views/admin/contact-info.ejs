<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventPro - Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js for graphs -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        :root {
            --primary-color: #6a11cb;
            --secondary-color: #2575fc;
            --accent-color: #ff7e5f;
            --sidebar-bg: #1a2236;
            --sidebar-text: #b1b9d8;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }
        #sidebar {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            min-height: 100vh;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        #sidebar .nav-link {
            color:white;
            padding: 12px 20px;
            border-left: 3px solid transparent;
            transition: all 0.3s ease;
        }
        #sidebar .nav-link:hover {
            color: #fff;
            background-color: rgba(255,255,255,0.1);
            border-left-color: var(--primary-color);
        }
        #sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(106, 17, 203, 0.2);
            border-left-color: var(--primary-color);
        }
        .admin-footer {
            border-top: 1px solid #e0e0e0;
            padding: 10px 20px;
            font-size: 14px;
            color: #6c757d;
            text-align: center;
        }
        .admin-footer strong {
            color: #6a11cb;
        }
        /* Mobile */
        @media (max-width: 768px) {
            .admin-footer {
                flex-direction: column;
                gap: 5px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">

        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
            <div class="position-sticky pt-3">
                <!-- Logo -->
                <div class="text-center py-4 border-bottom">
                    <h2 class="text-white fw-bold">Event<span class="text-primary">Pro</span></h2>
                    <p class="text-muted small"><b>Admin Panel</b></p>
                </div>

                <!-- User Info -->
                <div class="text-center py-3">
                    <img src="https://randomuser.me/api/portraits/men/32.jpg" 
                         class="rounded-circle mb-2" width="80" height="80" alt="Admin">
                    <h6 class="text-white mb-1">Admin User</h6>
                    <p class="text-muted small">admin@eventpro.com</p>
                </div>

                <!-- Navigation -->
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/about">
                            <i class="fas fa-info-circle me-2"></i>
                            About Page
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/service">
                            <i class="fas fa-concierge-bell me-2"></i>
                            Services
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/package">
                            <i class="fas fa-box me-2"></i>
                            Packages
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/gallery">
                            <i class="fas fa-images me-2"></i>
                            Gallery
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/blog">
                            <i class="fas fa-newspaper me-2"></i>
                            Blog/News
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/booking">
                            <i class="fas fa-bookmark me-2"></i>
                            Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/testimonials">
                            <i class="fas fa-star me-2"></i>
                            Testimonials
                        </a>
                    </li>

                    <!-- Contact Management -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#contactMenu">
                            <i class="fas fa-address-book me-2"></i>
                            Contact
                            <i class="fas fa-chevron-down float-end"></i>
                        </a>
                        <div class="collapse" id="contactMenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/contact">
                                        <i class="fas fa-image me-2"></i>
                                        Contact Header
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/contact-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Contact Info
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin/contact-form">
                                        <i class="fas fa-envelope me-2"></i>
                                        Contact Form
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/admin/faq">
                            <i class="fas fa-file-contract me-2"></i>
                            FAQ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/policy">
                            <i class="fas fa-chart-bar me-2"></i>
                            Privacy Policy
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/condition">
                            <i class="fas fa-cog me-2"></i>
                            Terms and Condition
                        </a>
                    </li>
                </ul>

                <!-- Logout -->
                <div class="mt-5 pt-3 border-top mb-2">
                    <a href="/admin/logout" class="btn btn-outline-light w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Logout
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">

            <h3 class="mb-4"><i class="fas fa-address-book me-2"></i>Contact Info</h3>

            <!-- Add Contact Info Form -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">Add Contact Info</div>
                <div class="card-body">
                    <form action="/admin/save_contact_info" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Address</label>
                                <input type="text" name="address" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Phone</label>
                                <input type="text" name="phone" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Email</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>WhatsApp</label>
                                <input type="text" name="whatsapp" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Map URL</label>
                                <input type="text" name="map_url" class="form-control">
                            </div>
                        </div>
                        <button class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Save
                        </button>
                    </form>
                </div>
            </div>

            <!-- Contact List Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">Contact List</div>
                <div class="card-body p-0">
                    <table class="table table-bordered table-hover m-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>WhatsApp</th>
                                <th>Map URL</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(contacts.length == 0){ %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">No Data Found</td>
                            </tr>
                        <% } %>

                        <% contacts.forEach(c => { %>
                            <tr>
                                <td><%= c.id %></td>
                                <td><%= c.address %></td>
                                <td><%= c.phone %></td>
                                <td><%= c.email %></td>
                                <td><%= c.whatsapp %></td>
                                <td>
                                    <% if(c.map_url){ %>
                                        <a href="<%= c.map_url %>" target="_blank">View Map</a>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <a href="/admin/edit-contact-info/<%= c.id %>" class="btn btn-sm btn-primary me-1">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>
</div>
</body>
</html>
