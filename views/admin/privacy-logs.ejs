<%- include('navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

        <div class="container mt-4">

    <!-- PAGE TITLE -->
    <h3 class="mb-4">
        üë§ Contact Info
    </h3>

    <!-- ADD CONTACT INFO CARD -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Add Contact Info
        </div>

        <div class="card-body">
            <form action="/admin/save_logs" method="POST">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <textarea name="contact_address" class="form-control" required></textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input type="text" name="contact_phone" class="form-control" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" name="contact_email" class="form-control" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Availability</label>
                        <input type="text" name="contact_availability" class="form-control" placeholder="9 AM - 8 PM">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Response Time</label>
                        <input type="text" name="contact_response_time" class="form-control" placeholder="Within 24 hours">
                    </div>
                </div>

                <button class="btn btn-success">
                    üíæ Save
                </button>
            </form>
        </div>
    </div>

    <!-- CONTACT LIST TABLE -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            Contact List
        </div>

        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
               <thead>
    <tr>
        <th>ID</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Availability</th>
        <th>Response Time</th>
        <th>Action</th>
    </tr>
</thead>

                <tbody>
<% if (logs.length > 0) { %>
    <% logs.forEach(function(row) { %>
        <tr>
            <td><%= row.contact_id %></td>
            <td><%= row.contact_address %></td>
            <td><%= row.contact_phone %></td>
            <td><%= row.contact_email %></td>
            <td><%= row.contact_availability %></td>
            <td><%= row.contact_response_time %></td>
            <td>
                <a href="/admin/edit-contact/<%= row.contact_id %>" 
                   class="btn btn-sm btn-primary">
                    ‚úèÔ∏è Edit
                </a>

                <a href="/admin/delete-contact/<%= row.contact_id %>" 
                   class="btn btn-sm btn-danger"
                   onclick="return confirm('Are you sure you want to delete this record?')">
                    üóë Delete
                </a>
            </td>
        </tr>
    <% }) %>
<% } else { %>
    <tr>
        <td colspan="7" class="text-center">No records found</td>
    </tr>
<% } %>
</tbody>

            </table>
        </div>
    </div>

</div>

<%- include('footer.ejs') %>
