                <script>
                    const sidebar = document.getElementById('sidebar');

                    document.querySelectorAll('.dropdown-toggle-click').forEach(toggle => {
                        toggle.addEventListener('click', function (e) {
                            e.preventDefault();
                            e.stopPropagation();

                            const parent = this.closest('.custom-dropdown');
                            const menu = parent.querySelector('.dropdown-menu-click');

                            // Close other dropdowns
                            document.querySelectorAll('.custom-dropdown').forEach(item => {
                                if (item !== parent) {
                                    item.classList.remove('open');
                                    const m = item.querySelector('.dropdown-menu-click');
                                    if (m) m.style.display = 'none';
                                }
                            });

                            // Toggle current dropdown
                            parent.classList.toggle('open');

                            menu.style.display = parent.classList.contains('open')
                                ? 'block'
                                : 'none';
                        });
                    });

                    // ❌ DO NOT close when clicking inside sidebar
                    sidebar.addEventListener('click', function (e) {
                        e.stopPropagation();
                    });

                    // ✅ Close ONLY when clicking outside sidebar
                    document.addEventListener('click', function () {
                        document.querySelectorAll('.custom-dropdown').forEach(item => {
                            item.classList.remove('open');
                            const menu = item.querySelector('.dropdown-menu-click');
                            if (menu) menu.style.display = 'none';
                        });
                    });
                </script>