                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        document.querySelectorAll(".dropdown-toggle-click").forEach(toggle => {
                            toggle.addEventListener("click", function () {
                                const parent = this.closest(".custom-dropdown");
                                const menu = parent.querySelector(".dropdown-menu-click");

                                document.querySelectorAll(".custom-dropdown").forEach(item => {
                                    if (item !== parent) {
                                        item.classList.remove("open");
                                        const m = item.querySelector(".dropdown-menu-click");
                                        if (m) m.style.display = "none";
                                    }
                                });

                                parent.classList.toggle("open");
                                menu.style.display = parent.classList.contains("open") ? "block" : "none";
                            });
                        });
                    });
                </script>