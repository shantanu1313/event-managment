        .admin-footer strong {
            color: #6a11cb;
        }

        /* Mobile */
        @media (max-width: 768px) {
            .admin-footer {
                flex-direction: column;
                gap: 5px;
                text-align: center;
            }
        }

        /* Dropdown wrapper */
        .custom-dropdown {
            position: relative;
        }

        /* Clickable nav link */
        .dropdown-toggle-click {
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
        }

        /* Arrow */
        .dropdown-arrow i {
            font-size: 12px;
            transition: transform 0.3s ease;
        }

        /* Rotate arrow when open */
        .custom-dropdown.open .dropdown-arrow i {
            transform: rotate(180deg);
        }

        /* Dropdown menu */
        .dropdown-menu-click {
            display: none;
            background: linear-gradient(135deg, #7c3aed, #2563eb);
            border-radius: 8px;
            margin-top: 6px;
            overflow: hidden;
        }

        /* Items */
        .dropdown-menu-click .dropdown-item {
            color: #fff;
            padding: 10px 20px;
            font-size: 14px;
        }

        .dropdown-menu-click .dropdown-item:hover {
            background: rgba(255, 255, 255, 0.15);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }



        /* Blue Gradient Header */
        .gradient-header {
            background: linear-gradient(135deg, #0d6efd, #0dcaf0);
        }

        /* Card styling */
        .admin-card {
            border-radius: 12px;
        }

        /* Focus effect */
        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.25);
        }

        /* Submit button gradient */
        .btn-gradient {
            background: linear-gradient(135deg, #0d6efd, #0dcaf0);
            border: none;
            color: #fff;
        }

        .btn-gradient:hover {
            opacity: 0.9;
        }

        /* Icon color */
