        /* ===== CUSTOM DROPDOWN ===== */
        .custom-dropdown {
            position: relative;
        }

        .dropdown-toggle-click {
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
        }

        .dropdown-arrow i {
            font-size: 12px;
            transition: transform 0.3s ease;
        }

        .custom-dropdown.open .dropdown-arrow i {
            transform: rotate(180deg);
        }

        .dropdown-menu-click {
            display: none;
            background: linear-gradient(135deg, #7c3aed, #2563eb);
            border-radius: 8px;
            margin-top: 6px;
            animation: fadeIn 0.3s ease;
        }

        .dropdown-menu-click .dropdown-item {
            color: #fff;
            padding: 10px 20px;
            font-size: 14px;
        }

        .dropdown-menu-click .dropdown-item:hover {
            background: rgba(255, 255, 255, 0.15);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

