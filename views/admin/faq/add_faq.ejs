<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
// Toastr Configuration
toastr.options = {
    "closeButton": true,
    "progressBar": true,
    "positionClass": "toast-top-right",
    "timeOut": "5000",
    "showMethod": "slideDown",
    "hideMethod": "slideUp"
};

// Initialize Tooltips
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});

// Toggle Answer View
function toggleAnswer(faqId, fullAnswer) {
    const answerElement = document.getElementById(`answer-${faqId}`);
    const buttonElement = answerElement.nextElementSibling;
    
    if (!fullAnswer) {
        console.error('No answer found for FAQ ID:', faqId);
        return;
    }
    
    if (answerElement.classList.contains('expanded')) {
        answerElement.classList.remove('expanded');
        const shortAnswer = fullAnswer.substring(0, 150);
        answerElement.innerHTML = shortAnswer + (fullAnswer.length > 150 ? '...' : '');
        if (buttonElement) buttonElement.textContent = 'View More';
    } else {
        answerElement.classList.add('expanded');
        answerElement.innerHTML = fullAnswer;
        if (buttonElement) buttonElement.textContent = 'View Less';
    }
}

// FAQ ACTIONS
let faqToDelete = null;

function deleteFaq(id, question) {
    faqToDelete = id;
    document.getElementById('deleteFaqName').textContent = question;
    
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    deleteModal.show();
}

// Confirm Delete
document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
    if (!faqToDelete) return;
    
    fetch(`/admin/delete_faq/${faqToDelete}`, {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        if (data.success) {
            toastr.success('FAQ deleted successfully');
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            toastr.error(data.message || 'Failed to delete FAQ');
        }
        faqToDelete = null;
        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
    })
    .catch(error => {
        console.error('Error:', error);
        toastr.error('An error occurred while deleting the FAQ');
        faqToDelete = null;
        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
    });
});

// ========== FORM VALIDATION ==========
document.getElementById('faqForm').addEventListener('submit', function(e) {
    // Validate question length
    const question = this.question.value.trim();
    if (question.length < 5) {
        e.preventDefault();
        toastr.error('Question must be at least 5 characters long');
        this.question.focus();
        return;
    }
    
    if (question.length > 500) {
        e.preventDefault();
        toastr.error('Question must be less than 500 characters');
        this.question.focus();
        return;
    }
    
    // Validate answer length
    const answer = this.answer.value.trim();
    if (answer.length < 10) {
        e.preventDefault();
        toastr.error('Answer must be at least 10 characters long');
        this.answer.focus();
        return;
    }
    
    if (answer.length > 5000) {
        e.preventDefault();
        toastr.error('Answer must be less than 5000 characters');
        this.answer.focus();
        return;
    }
    
    // Show loading
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Saving...';
    submitBtn.disabled = true;
    
    // Re-enable after 5 seconds if still processing
    setTimeout(() => {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }, 5000);
});

// ========== TABLE ENHANCEMENTS ==========
// Add row hover effects
document.querySelectorAll('.table tbody tr').forEach(row => {
    row.addEventListener('mouseenter', function() {
        this.style.transform = 'translateX(5px)';
    });
    
    row.addEventListener('mouseleave', function() {
        this.style.transform = 'translateX(0)';
    });
});

// Auto-resize textarea
document.querySelectorAll('.form-textarea').forEach(textarea => {
    textarea.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
    });
    
    // Auto-resize on page load if there's content
    if (textarea.value) {
        textarea.style.height = 'auto';
        textarea.style.height = (textarea.scrollHeight) + 'px';
    }
});

// Character counter for textarea
const answerTextarea = document.querySelector('textarea[name="answer"]');
if (answerTextarea) {
    const counter = document.createElement('div');
    counter.className = 'text-muted text-end mt-1 small';
    counter.textContent = '0/5000 characters';
    answerTextarea.parentNode.insertBefore(counter, answerTextarea.nextSibling);
    
    answerTextarea.addEventListener('input', function() {
        const count = this.value.length;
        counter.textContent = `${count}/5000 characters`;
        
        if (count > 4500) {
            counter.style.color = '#ff416c';
        } else if (count > 4000) {
            counter.style.color = '#ffb347';
        } else {
            counter.style.color = '#6c757d';
        }
    });
}
</script>

