<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

<style>
/* ========== GLOBAL STYLES ========== */
:root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
    --card-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

body {
    background-color: #f8f9fa;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: hidden;
}

/* ========== MAIN LAYOUT ========== */
.main-content {
    background: var(--primary-gradient);
    min-height: calc(100vh - 70px);
    padding: 30px;
    position: relative;
}

.main-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/api/placeholder/1920/1080') center/cover;
    opacity: 0.1;
    z-index: 0;
}

.main-content > * {
    position: relative;
    z-index: 1;
}

/* ========== CARD STYLES ========== */
.card {
    border: none;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
}

.card-header {
    background: var(--secondary-gradient);
    color: white;
    border-bottom: none;
    padding: 25px 30px;
    font-weight: 600;
    font-size: 1.2rem;
    position: relative;
    overflow: hidden;
}

.card-header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
        45deg,
        transparent 30%,
        rgba(255, 255, 255, 0.1) 50%,
        transparent 70%
    );
    animation: shine 3s infinite linear;
}

@keyframes shine {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

/* ========== TABLE STYLES ========== */
.table-container {
    overflow-x: auto;
    border-radius: 15px;
    margin: 20px 0;
}

.table {
    margin-bottom: 0;
    border-collapse: separate;
    border-spacing: 0;
    min-width: 1000px;
}

.table thead {
    background: var(--secondary-gradient);
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
}

.table thead th {
    border: none;
    padding: 20px 25px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    border-right: 1px solid rgba(255, 255, 255, 0.1);
}

.table thead th:last-child {
    border-right: none;
}

.table tbody tr {
    background-color: rgba(255, 255, 255, 0.95);
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
}

.table tbody tr:hover {
    background-color: rgba(79, 192, 210, 0.08);
    transform: translateX(5px);
}

.table tbody tr::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 0;
    background: var(--secondary-gradient);
    transition: height 0.3s ease;
}

.table tbody tr:hover::after {
    height: 100%;
}

.table tbody td {
    padding: 20px 25px;
    vertical-align: middle;
    border: none;
    color: #333;
    border-right: 1px solid rgba(0, 0, 0, 0.05);
    position: relative;
}

.table tbody td:last-child {
    border-right: none;
}

/* FAQ Content Styling */
.question-cell {
    max-width: 400px;
}

.question-text {
    font-weight: 600;
    color: #2c3e50;
    line-height: 1.4;
    display: -webkit-box;
  
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.answer-cell {
    max-width: 500px;
}

.answer-text {
    color: #555;
    line-height: 1.5;
    display: -webkit-box;
   
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.answer-text.expanded {
    
    overflow: visible;
}

.view-more-btn {
    background: none;
    border: none;
    color: #667eea;
    padding: 0;
    font-size: 0.85rem;
    cursor: pointer;
    text-decoration: underline;
}

.view-more-btn:hover {
    color: #764ba2;
}

/* ========== MODAL STYLES ========== */
.modal-content {
    border: none;
    border-radius: 25px;
    overflow: hidden;
    background: var(--card-gradient);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
}

.modal-header {
    background: var(--primary-gradient);
    color: white;
    border-bottom: none;
    padding: 25px 30px;
    position: relative;
}

.modal-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 5%;
    width: 90%;
    height: 2px;
    background: rgba(255, 255, 255, 0.2);
}

.modal-title {
    font-weight: 600;
    font-size: 1.3rem;
}

.btn-close {
    filter: invert(1) brightness(200%);
    opacity: 0.8;
    transition: all 0.3s ease;
}

.btn-close:hover {
    opacity: 1;
    transform: rotate(90deg);
}

.modal-body {
    padding: 30px;
    max-height: 70vh;
    overflow-y: auto;
    background: url('/api/placeholder/800/600') center/cover;
    background-attachment: fixed;
    position: relative;
}

.modal-body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.95);
    z-index: 0;
}

.modal-body > * {
    position: relative;
    z-index: 1;
}

.modal-footer {
    background-color: rgba(255, 255, 255, 0.9);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding: 20px 30px;
    border-bottom-left-radius: 25px;
    border-bottom-right-radius: 25px;
}

/* ========== FORM STYLES ========== */
.form-control, .form-textarea {
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    padding: 12px 18px;
    transition: all 0.3s ease;
    background-color: white;
    font-size: 0.95rem;
    width: 100%;
}

.form-control:focus, .form-textarea:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.3rem rgba(102, 126, 234, 0.2);
    transform: translateY(-2px);
}

.form-textarea {
    min-height: 150px;
    resize: vertical;
}

.form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.form-label i {
    color: #667eea;
    font-size: 0.9rem;
}

/* ========== BUTTONS ========== */
.btn {
    border-radius: 10px;
    padding: 10px 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 5px;
    height: 5px;
    background: rgba(255, 255, 255, 0.5);
    opacity: 0;
    border-radius: 100%;
    transform: scale(1, 1) translate(-50%);
    transform-origin: 50% 50%;
}

.btn:focus:not(:active)::after {
    animation: ripple 1s ease-out;
}

@keyframes ripple {
    0% {
        transform: scale(0, 0);
        opacity: 0.5;
    }
    100% {
        transform: scale(20, 20);
        opacity: 0;
    }
}

.btn-primary {
    background: var(--primary-gradient);
    border: none;
    color: white;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #694190 100%);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
}

.btn-warning {
    background: linear-gradient(135deg, #ffb347 0%, #ffcc33 100%);
    border: none;
    color: white;
}

.btn-warning:hover {
    background: linear-gradient(135deg, #e0a030 0%, #e6b800 100%);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 179, 71, 0.3);
}

.btn-danger {
    background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
    border: none;
    color: white;
}

.btn-danger:hover {
    background: linear-gradient(135deg, #e03a61 0%, #e64426 100%);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 65, 108, 0.3);
}

/* ========== DELETE MODAL ========== */
#deleteModal .modal-content {
    background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
    border: 3px solid #ff416c;
}

#deleteModal .modal-header {
    background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
}

/* ========== ANIMATIONS ========== */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

.card, .modal-content {
    animation: fadeInUp 0.6s ease-out;
}

.pulse {
    animation: pulse 2s infinite;
}

/* ========== SCROLLBAR ========== */
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: var(--primary-gradient);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #694190 100%);
}

/* ========== RESPONSIVE ========== */
@media (max-width: 768px) {
    .main-content {
        padding: 15px;
    }
    
    .card-header {
        padding: 15px 20px;
        font-size: 1rem;
    }
    
    .table thead {
        display: none;
    }
    
    .table tbody tr {
        display: block;
        margin-bottom: 20px;
        border: 2px solid rgba(102, 126, 234, 0.1);
        border-radius: 15px;
        padding: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .table tbody td {
        display: block;
        text-align: right;
        padding: 12px 15px;
        position: relative;
        border-right: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .table tbody td:last-child {
        border-bottom: none;
    }
    
    .table tbody td::before {
        content: attr(data-label);
        position: absolute;
        left: 15px;
        font-weight: 600;
        color: #667eea;
        text-transform: uppercase;
        font-size: 0.8rem;
    }
    
    .modal-body {
        padding: 20px;
        max-height: 80vh;
    }
}

@media (max-width: 576px) {
    .btn {
        padding: 8px 15px;
        font-size: 0.9rem;
    }
    
    .modal-dialog {
        margin: 10px;
    }
}
</style>
</head>

