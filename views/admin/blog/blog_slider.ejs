<%- include('../navbar.ejs') %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Admin | Blog Slider</title>

        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

        <style>
            .page-header {
                background: linear-gradient(135deg, #0d6efd, #0a58ca);
                color: #fff;
                padding: 22px 30px;
                border-radius: 14px;
                margin: 30px auto;
                box-shadow: 0 8px 20px rgba(13, 110, 253, 0.35);
            }

            .page-header h3 {
                margin: 0;
                font-weight: 600;
            }

            .page-header p {
                margin: 4px 0 0;
                opacity: 0.9;
                font-size: 14px;
            }
        </style>
    </head>

    <body class="bg-light">

        <!-- üî∑ PAGE HEADER -->
        <div class="container">
            <div class="page-header">
                <h3>üìù Blog Slider Management</h3>
                <p>Admin Panel ‚Üí Blog Section ‚Üí Slider Control</p>
            </div>
        </div>

        <!-- üî∑ ADD BLOG SLIDER -->
        <div class="container mb-5">
            <div class="card shadow border-0">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
                    <h5 class="mb-0">‚ûï Add Blog Slider</h5>
                </div>

                <div class="card-body">
                    <form action="/admin/blog_slider_save" method="post" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label class="form-label">üì∑ Blog Slider Image</label>
                            <input type="file" name="blog_image" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">üì∞ Blog Title</label>
                            <input type="text" name="blog_title" class="form-control" placeholder="Enter blog title"
                                required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">üìù Blog Description</label>
                            <textarea name="blog_description" class="form-control" rows="4"
                                placeholder="Write blog description here..." required></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">
                                üíæ Save Blog Slider
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <!-- üî∑ BLOG SLIDER LIST -->
        <div class="container-fluid mb-5">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white d-flex justify-content-between align-items-center"
                    style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
                    <h5 class="mb-0">üìã Blog Slider List</h5>
                    <a href="/admin/blog_slider" class="btn btn-light btn-sm fw-semibold">
                        ‚ûï Add New
                    </a>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle text-nowrap">
                            <thead class="table-light">
                                <tr class="text-center">
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% if (data.length> 0) { %>
                                    <% for (var i=0; i < data.length; i++) { %>
                                        <tr>
                                            <td class="text-center fw-semibold">
                                                <%= i + 1 %>
                                            </td>

                                            <td class="text-center">
                                                <img src="/upload/blog/<%= data[i].blog_image %>"
                                                    class="img-thumbnail rounded-3" width="70">
                                            </td>

                                            <td class="fw-semibold">
                                                <%= data[i].blog_title %>
                                            </td>

                                            <td class="text-muted">
                                                <%= data[i].blog_description %>
                                            </td>

                                            <td class="text-center">
                                                <a href="/admin/blog/blog_slider_edit/<%= data[i].id %>"
                                                    class="btn btn-sm btn-outline-primary me-1">
                                                    ‚úèÔ∏è Edit
                                                </a>
                                                <a href="/admin/blog_slider_status/<%= data[i].id %>"
                                                    class="btn btn-sm btn-outline-danger">
                                                    üóë Delete
                                                </a>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted py-4">
                                                        No blog slider data found
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../footer.ejs') %>

    </body>

    </html>