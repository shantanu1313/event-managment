<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

                <style>
            .page-header {
                background: linear-gradient(135deg, #0d6efd, #0a58ca);
                color: #fff;
                padding: 22px 30px;
                border-radius: 14px;
                margin: 30px auto;
                box-shadow: 0 8px 20px rgba(13, 110, 253, 0.35);
            }

            .page-header h3 {
                margin: 0;
                font-weight: 600;
            }

            .page-header p {
                margin: 4px 0 0;
                opacity: 0.9;
                font-size: 14px;
            }
        </style>

        <div class="container">
            <div class="page-header">
                <h3>‚úèÔ∏è Update Blog Slider</h3>
                <p>Admin Panel ‚Üí Blog Section ‚Üí Edit Slider</p>
            </div>
        </div>

        <div class="container mb-5">
            <div class="card shadow border-0">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
                    <h5 class="mb-0">üìù Edit Blog Slider Details</h5>
                </div>

                <div class="card-body">
                    <form action="/admin/update_blog_slider/<%= data[0].id %>" method="post"
                        enctype="multipart/form-data">

                        <!-- Old Image -->
                        <div class="mb-3">
                            <label class="form-label">üì∑ Current Image</label><br>
                            <img src="/upload/blog/<%= data[0].blog_image %>" width="140"
                                class="img-thumbnail rounded-3 shadow-sm">
                        </div>

                        <!-- New Image -->
                        <div class="mb-3">
                            <label class="form-label">üì∑ Update Blog Slider Image</label>
                            <input type="file" name="blog_image" class="form-control">
                            <small class="text-muted">Leave empty to keep existing image</small>
                        </div>

                        <!-- Blog Title -->
                        <div class="mb-3">
                            <label class="form-label">üì∞ Blog Title</label>
                            <input type="text" name="blog_title" class="form-control" value="<%= data[0].blog_title %>"
                                required>
                        </div>

                        <!-- Blog Description -->
                        <div class="mb-3">
                            <label class="form-label">üìù Blog Description</label>
                            <textarea name="blog_description" class="form-control" rows="4"
                                required><%= data[0].blog_description %></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">
                                üíæ Update Blog Slider
                            </button>
                            <a href="/admin/blog_slider" class="btn btn-outline-secondary ms-2">
                                ‚Ü© Back
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>

