<%- include('../navbar.ejs') %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Admin | Blog Management</title>

        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- FontAwesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

        <style>
            body {
                background: #f5f7fb;
            }

            /* ================= HEADER ================= */
            .page-header {
                background: linear-gradient(135deg, #0d6efd, #0a58ca);
                color: #fff;
                padding: 12px 20px;
                border-radius: 10px;
                margin-bottom: 20px;
                box-shadow: 0 6px 18px rgba(13, 110, 253, 0.3);
            }

            /* ================= BUTTON ================= */
            .btn-gradient {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: #fff;
                border: none;
            }

            .btn-gradient:hover {
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
                color: #fff;
            }

            /* ================= TABLE ================= */
            .table-wrapper {
                border-radius: 12px;
                overflow: hidden;
                background: #fff;
                box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            }

            table th {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: #fff;
                font-weight: 600;
                vertical-align: middle;
            }

            table td {
                vertical-align: middle;
                font-size: 14px;
            }

            table img {
                width: 60px;
                height: 60px;
                object-fit: cover;
                border-radius: 6px;
                border: 1px solid #667eea;
            }

            /* ================= PRINT ================= */
            @media print {
                body * {
                    visibility: hidden;
                }

                .print-area,
                .print-area * {
                    visibility: visible;
                }

                .print-area {
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                }

                /* Hide action buttons in print */
                .no-print,
                .no-print * {
                    display: none !important;
                }

                /* Table borders */
                table,
                th,
                td {
                    border: 1px solid #000 !important;
                }

                table th,
                table td {
                    font-size: 12px;
                    padding: 6px;
                }

                table img {
                    width: 50px;
                    height: 50px;
                }
            }

            /* Remove top spacing under navbar */
            .container {
                margin-top: 20px;
            }
        </style>
    </head>

    <body>

        <!-- ================= PAGE HEADER ================= -->
        <div class="container no-print">
            <div class="page-header">
                <h4><i class="fas fa-newspaper me-2"></i> Blog Management</h4>
                <small>Admin Panel → Blog Section → Add & Manage Blogs</small>
            </div>
        </div>

        <!-- ================= ADD BLOG FORM ================= -->
        <div class="container mb-5 no-print" id="addBlogForm">
            <div class="card shadow border-0">
                <div class="card-body">
                    <form action="/admin/save_blog" method="post" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Blog Image</label>
                                <input type="file" name="blog_image" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Blog Date</label>
                                <input type="date" name="blog_date" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Blog Title</label>
                            <input type="text" name="blog_title" class="form-control" placeholder="Enter blog title"
                                required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Short Summary</label>
                            <input type="text" name="blog_para" class="form-control" placeholder="Short description">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Blog Message</label>
                            <textarea name="blog_message" class="form-control" rows="5"
                                placeholder="Write full blog content here..."></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-gradient px-5"><i class="fas fa-save me-1"></i> Save
                                Blog</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- ================= BLOG TABLE ================= -->
        <div class="container mb-5 print-area">
            <% if(data && data.length>0){ %>
                <div class="table-wrapper">
                    <div class="card border-0">
                        <div class="card-header gradient-bg py-2 d-flex align-items-center">
                            <strong>Blog List</strong>
                            <span class="badge bg-light text-dark ms-auto">
                                <%= data.length %> Blogs
                            </span>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle text-center">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>Date</th>
                                        <th>Title</th>
                                        <th>Summary</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((blog,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td>
                                                <% if(blog.blog_image){ %>
                                                    <img src="/upload/blog/<%= blog.blog_image %>">
                                                    <% } else { %>
                                                        <span class="text-muted">No Image</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <%= new Date(blog.blog_date).toLocaleDateString() %>
                                            </td>
                                            <td class="text-start">
                                                <%= blog.blog_title %>
                                            </td>
                                            <td class="text-start text-muted">
                                                <%= blog.blog_para %>
                                            </td>
                                            <td class="text-start">
                                                <%= blog.blog_message %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    <div class="alert alert-info text-center py-4">
                        <i class="fas fa-info-circle fs-4 mb-2"></i>
                        <h6>No Blogs Found</h6>
                    </div>
                    <% } %>
                        <div class="text-center my-2 no-print">
                            <button onclick="window.print()" class="btn btn-primary"><i class="fas fa-print me-1"></i>
                                Print Table</button>
                        </div>
        </div>

        <!-- Footer -->

        <%- include('../footer.ejs') %>

    </body>

    </html>