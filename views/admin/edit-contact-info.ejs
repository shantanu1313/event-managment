<%- include('navbar.ejs') %>
    
<main class="main-content">

        <header class="top-navbar">
            <div class="page-title">
                <h1>Dashboard Overview</h1>
                <p>Welcome back! Here's what's happening with your events today.</p>
            </div>
            
            <div class="navbar-right">
                <div class="search-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search events, clients, payments...">
                </div>
                
                <div class="navbar-icons">
                    <div class="nav-icon">
                        <i class="far fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </div>
                    <div class="nav-icon">
                        <i class="far fa-envelope"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="dashboard-content">

        <main class="container py-5">

    <h3 class="mb-4 text-primary">
        <i class="fas fa-address-book me-2"></i>
        Edit Contact Info
    </h3>

    <% if (contact) { %>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white fw-bold">
            Edit Contact
        </div>
        <div class="card-body">

            <form action="/admin/update_contact_info/<%= contact.id %>" method="post">

                <div class="row g-3">

                    <!-- Address -->
                    <div class="col-md-6">
                        <label for="address" class="form-label">Address</label>
                        <input
                            type="text"
                            id="address"
                            name="address"
                            class="form-control"
                            placeholder="Enter address"
                            value="<%= contact.address %>"
                            required
                        >
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label for="phone" class="form-label">Phone</label>
                        <input
                            type="text"
                            id="phone"
                            name="phone"
                            class="form-control"
                            placeholder="Enter phone number"
                            value="<%= contact.phone %>"
                            required
                        >
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter email"
                            value="<%= contact.email %>"
                            required
                        >
                    </div>

                    <!-- WhatsApp -->
                    <div class="col-md-6">
                        <label for="whatsapp" class="form-label">WhatsApp</label>
                        <input
                            type="text"
                            id="whatsapp"
                            name="whatsapp"
                            class="form-control"
                            placeholder="Enter WhatsApp number"
                            value="<%= contact.whatsapp %>"
                        >
                    </div>

                    <div class="col-md-6">
                        <label for="map_url" class="form-label">Map URL</label>
                        <input
                            type="text"
                            id="map_url"
                            name="map_url"
                            class="form-control"
                            placeholder="Enter map URL"
                            value="<%= contact.map_url %>"
                        >   
                    </div>

                </div>

                <div class="mt-4 d-flex align-items-center">
                    <button type="submit" class="btn btn-success me-3">
                        <i class="fas fa-save me-1"></i> Update
                    </button>
                    <a href="/admin/contact-info" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>

            </form>

        </div>
    </div>

    <% } else { %>

        <div class="alert alert-danger">
            Contact data not found.
        </div>

    <% } %>

</main>

<style>
    body {
        background-color: #f8f9fa; /* light gray background */
    }
    .card {
        border-radius: 0.75rem;
    }
    .card-header {
        font-size: 1.2rem;
    }
    input.form-control {
        border-radius: 0.5rem;
    }
    button.btn {
        min-width: 120px;
    }
</style>

<%- include('footer.ejs') %>