<%- include("../navbar.ejs") %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">About â€“ Leadership Team</h1>

    <a href="/admin/about/add_team" class="btn btn-primary">
        + Add Member
    </a>
</div>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body table-responsive">

            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% if(leadership && leadership.length > 0){ %>

                        <% leadership.forEach(function(item, index){ %>
                            <tr>
                                <td><%= index + 1 %></td>

                                <td>
                                    <% if(item.image){ %>
                                        <img src="/upload/about/<%= item.image %>"
                                             width="60" height="60"
                                             class="rounded-circle">
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>

                                <td><%= item.name %></td>
                                <td><%= item.designation %></td>

                                <td>
                                    <% if(item.status == 1){ %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Inactive</span>
                                    <% } %>
                                </td>

                                <td>
                                     <a href="/admin/about/team/delete/<%= item.id %>"
                                       onclick="return confirm('Are you sure you want to delete this record?')"
                                       class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        Delete
                                    </a>
                                    <a href="/admin/about/team/edit/<%= item.id %>"
                                       class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        <% }) %>

                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">
                                No leadership team data found
                            </td>
                        </tr>
                    <% } %>
                </tbody>

            </table>

        </div>
    </div>
</div>

<%- include("../footer.ejs") %>
