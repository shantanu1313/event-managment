<%- include("../navbar.ejs") %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">About â€“ Our Evolution-List</h1>

    <a href="/admin/about/our_evolution" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Add Journey
    </a>
</div>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <% if (timeline && timeline.length > 0) { %>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Year</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% timeline.forEach(function(item, index){ %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= item.year %></td>
                                    <td><%= item.title %></td>
                                    <td>
                                        <%= item.description.length > 80 
                                            ? item.description.substring(0, 80) + '...' 
                                            : item.description %>
                                    </td>
                                    <td>
                                        <% if(item.status == 1){ %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td class="text-center">
                                        <a href="/admin/about/our_evolution/edit/<%= item.id %>" 
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a href="/admin/about/our_evolution/delete/<%= item.id %>" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Are you sure you want to delete this record?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

            <% } else { %>
                <p class="text-center text-muted mb-0">No journey data found.</p>
            <% } %>

        </div>
    </div>
</div>

<%- include("../footer.ejs") %>
