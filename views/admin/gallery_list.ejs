<%-include ("navbar.ejs")%>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2" id="page-title">Gallery List</h1>
    <a href="/admin/gallery" class="btn btn-primary">
        + Add Gallery
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Category</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Event Date</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% if(gallery && gallery.length > 0){ %>
                        <% gallery.forEach(function(row, index){ %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= row.category %></td>
                                <td><%= row.title %></td>
                                <td>
                                    <% if(row.gallary_img){ %>
                                        <img 
                                            src="/upload/gallery/<%= row.gallary_img %>" 
                                            width="80" 
                                            class="img-thumbnail">
                                    <% } else { %>
                                        <span class="text-muted">No Image</span>
                                    <% } %>
                                </td>
                                <td>
                                    <%= new Date(row.event_date).toLocaleDateString('en-GB') %>
                                </td>
                                <td>
                                    <a href="/admin/gallery_edit/<%= row.id %>" 
                                       class="btn btn-sm btn-warning">
                                        Edit
                                    </a>

                                    <a href="/admin/gallery_delete/<%= row.id %>" 
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this image?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-muted">
                                No gallery records found
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%-include ("footer.ejs")%>
